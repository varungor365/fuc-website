{% comment %}
  Blog Template - Display Blog Posts
  List all blog posts with pagination
{% endcomment %}

{% section 'breadcrumbs' %}

<div class="blog-template">
  <div class="container blog-template-container">
    <div class="blog-header">
      <h1 class="blog-title">{{ blog.title }}</h1>
      {% if blog.excerpt %}
        <p class="blog-description">{{ blog.excerpt }}</p>
      {% endif %}
    </div>

    {% if blog.articles.size > 0 %}
      <div class="blog-articles">
        {% for article in blog.articles %}
          <article class="blog-article-card" itemscope itemtype="https://schema.org/Article">
            {% if article.image %}
              <div class="article-image">
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.image.alt | default: article.title }}"
                  loading="lazy"
                  itemprop="image"
                >
              </div>
            {% endif %}

            <div class="article-content">
              <div class="article-meta">
                <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished">
                  {{ article.published_at | date: '%B %d, %Y' }}
                </time>
                <span class="article-author" itemprop="author">By {{ article.author }}</span>
              </div>

              <h2 class="article-title" itemprop="headline">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>

              <p class="article-excerpt" itemprop="description">
                {{ article.excerpt_or_content | strip_html | truncatewords: 30 }}
              </p>

              <div class="article-actions">
                <a href="{{ article.url }}" class="read-more-link">Read Full Article â†’</a>
                {% if article.comments_enabled? %}
                  <span class="comment-count">
                    {{ article.comments_count }} Comments
                  </span>
                {% endif %}
              </div>
            </div>
          </article>
        {% endfor %}
      </div>

      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% else %}
      <div class="no-articles">
        <p>No articles found in this blog.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .blog-template {
    padding: 3rem 2rem;
  }

  .blog-template-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .blog-description {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-articles {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .blog-article-card {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 2rem;
    align-items: start;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 8px;
    transition: all 0.3s;
  }

  .blog-article-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .article-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    border-radius: 8px;
    background: white;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-article-card:hover .article-image img {
    transform: scale(1.05);
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: #999;
    margin-bottom: 1rem;
  }

  .article-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0.75rem 0;
  }

  .article-title a {
    color: #000;
    text-decoration: none;
    transition: color 0.3s;
  }

  .article-title a:hover {
    color: #007aff;
  }

  .article-excerpt {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .article-actions {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .read-more-link {
    color: #007aff;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
  }

  .read-more-link:hover {
    color: #0051d5;
    margin-right: 0.25rem;
  }

  .comment-count {
    font-size: 0.9rem;
    color: #999;
  }

  .pagination {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem 0;
    border-top: 1px solid #f0f0f0;
  }

  .pagination a,
  .pagination span {
    display: inline-block;
    padding: 0.5rem 0.75rem;
    margin: 0.25rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    color: #000;
    transition: all 0.3s;
  }

  .pagination a:hover {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .pagination span.active {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .no-articles {
    text-align: center;
    padding: 3rem 2rem;
    color: #666;
  }

  @media (max-width: 768px) {
    .blog-template {
      padding: 2rem 1rem;
    }

    .blog-title {
      font-size: 1.8rem;
    }

    .blog-article-card {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem 1rem;
    }

    .article-image {
      height: 200px;
    }

    .article-title {
      font-size: 1.3rem;
    }

    .article-actions {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
