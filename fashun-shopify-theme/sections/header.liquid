{% comment %}
  FASHUN.CO Header Section
{% endcomment %}

<header class="site-header" id="site-header">
  <div class="container">
    <div class="header-content">
      <!-- Logo -->
      <div class="header-logo">
        <a href="{{ routes.root_url }}" class="logo-link">
          {%- if settings.logo -%}
            <img src="{{ settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" width="{{ settings.logo_width | default: 150 }}">
          {%- else -%}
            <span class="logo-text">{{ shop.name }}</span>
          {%- endif -%}
        </a>
      </div>
      
      <!-- Navigation -->
      <nav class="main-nav">
        <ul class="nav-list">
          {%- for link in linklists.main-menu.links -%}
            <li class="nav-item">
              <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
      
      <!-- Header Actions -->
      <div class="header-actions">
        <!-- Search -->
        <button class="action-btn search-btn" onclick="openSearch()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
        
        <!-- Account -->
        <a href="{{ routes.account_url }}" class="action-btn account-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
        
        <!-- Cart -->
        <button class="action-btn cart-btn" onclick="openCartDrawer()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z"></path>
            <path d="M20 22C20.5523 22 21 21.5523 21 21C21 20.4477 20.5523 20 20 20C19.4477 20 19 20.4477 19 21C19 21.5523 19.4477 22 20 22Z"></path>
            <path d="M1 1H5L7.68 14.39C7.77144 14.8504 8.02191 15.264 8.38755 15.5583C8.75318 15.8526 9.2107 16.009 9.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6"></path>
          </svg>
          <span class="cart-count" id="cart-count">{{ cart.item_count }}</span>
        </button>
        
        <!-- Mobile Menu Toggle -->
        <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu-content">
      <ul class="mobile-nav-list">
        {%- for link in linklists.main-menu.links -%}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: white;
    border-bottom: 1px solid #e5e7eb;
    transition: all 0.3s ease;
  }
  
  .site-header.scrolled {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 0;
  }
  
  .logo-link {
    text-decoration: none;
  }
  
  .logo-text {
    font-size: 24px;
    font-weight: 900;
    color: var(--fashun-primary);
  }
  
  .main-nav {
    display: none;
  }
  
  .nav-list {
    display: flex;
    gap: 32px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .nav-link {
    text-decoration: none;
    font-weight: 600;
    color: var(--fashun-secondary);
    transition: color 0.3s ease;
  }
  
  .nav-link:hover {
    color: var(--fashun-primary);
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  
  .action-btn {
    position: relative;
    width: 40px;
    height: 40px;
    border: none;
    background: none;
    cursor: pointer;
    border-radius: 8px;
    transition: background-color 0.3s ease;
  }
  
  .action-btn:hover {
    background: #f3f4f6;
  }
  
  .cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    background: var(--fashun-accent);
    color: white;
    font-size: 12px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }
  
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 4px;
    width: 24px;
    height: 24px;
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .mobile-menu-btn span {
    width: 100%;
    height: 2px;
    background: var(--fashun-secondary);
    transition: all 0.3s ease;
  }
  
  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .mobile-menu.open {
    display: block;
  }
  
  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 20px;
  }
  
  .mobile-nav-list li {
    margin-bottom: 16px;
  }
  
  .mobile-nav-list a {
    text-decoration: none;
    font-weight: 600;
    color: var(--fashun-secondary);
    font-size: 18px;
  }
  
  @media (min-width: 768px) {
    .main-nav {
      display: block;
    }
    
    .mobile-menu-btn {
      display: none;
    }
  }
</style>

<script>
  function toggleMobileMenu() {
    document.getElementById('mobile-menu').classList.toggle('open');
  }
  
  function openSearch() {
    // Search functionality
    alert('Search functionality coming soon!');
  }
  
  function openCartDrawer() {
    window.location.href = '{{ routes.cart_url }}';
  }
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}