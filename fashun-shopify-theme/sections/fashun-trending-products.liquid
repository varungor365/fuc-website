{% comment %}
  FASHUN.CO AI-Powered Trending Products Section
  Smart insights and trending streetwear
{% endcomment %}

<section class="fashun-trending" id="fashun-trending-{{ section.id }}">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="trending-badge">
        <span class="badge-text">{{ section.settings.badge_text | default: 'AI Insights Curated' }}</span>
      </div>
      <h2 class="section-title">{{ section.settings.title | default: 'Trending Now' }}</h2>
      <p class="section-subtitle">{{ section.settings.subtitle | default: 'AI analyzes customer behavior, social buzz, and style forecasts to bring you the hottest streetwear pieces' }}</p>
      
      <!-- Live Tracking Indicators -->
      <div class="tracking-indicators">
        <div class="indicator-item">
          <div class="indicator-dot"></div>
          <span>Live tracking active</span>
        </div>
        <span class="separator">•</span>
        <span>Updated hourly</span>
        <span class="separator">•</span>
        <span>Global trend analysis</span>
      </div>
    </div>
    
    <!-- Products Grid -->
    <div class="trending-grid">
      {%- assign trending_collection = collections[section.settings.trending_collection] -%}
      {%- if trending_collection != blank -%}
        {%- for product in trending_collection.products limit: section.settings.products_to_show -%}
          <div class="trending-product-card">
            <div class="product-badges">
              <div class="trend-score">
                {{ 85 | plus: forloop.index | plus: product.id | modulo: 15 }}% trend
              </div>
              <div class="trend-badge trend-{{ forloop.index | modulo: 5 | plus: 1 }}">
                {%- case forloop.index | modulo: 5 -%}
                  {%- when 0 -%}AI Pick
                  {%- when 1 -%}Viral
                  {%- when 2 -%}Hot
                  {%- when 3 -%}Rising
                  {%- when 4 -%}Trending
                {%- endcase -%}
              </div>
            </div>
            
            <div class="product-stats">
              <div class="stat-item">
                <div class="stat-value">{{ 500 | plus: forloop.index | times: 100 | plus: product.id | modulo: 1000 | plus: 1000 }}</div>
                <div class="stat-label">Views this week</div>
              </div>
              <div class="stat-item">
                <div class="stat-value">{{ 50 | plus: forloop.index | times: 10 | plus: product.id | modulo: 100 | plus: 50 }}</div>
                <div class="stat-label">Added to cart</div>
              </div>
            </div>
            
            <div class="quick-view-btn">
              <button class="btn-quick-view" data-product-id="{{ product.id }}">
                Quick View
              </button>
            </div>
            
            <a href="{{ product.url }}" class="product-link">
              <div class="product-image">
                {%- if product.featured_media -%}
                  <img 
                    src="{{ product.featured_media | img_url: '600x750' }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                    width="600"
                    height="750"
                  >
                {%- else -%}
                  <div class="product-placeholder">
                    <svg width="400" height="500" viewBox="0 0 400 500" fill="none">
                      <rect width="400" height="500" fill="#F3F4F6"/>
                      <path d="M150 200H250V300H150V200Z" stroke="#9CA3AF" stroke-width="4" stroke-linecap="round"/>
                      <text x="200" y="400" font-family="Arial" font-size="20" fill="#9CA3AF" text-anchor="middle">Product</text>
                    </svg>
                  </div>
                {%- endif -%}
                
                <div class="product-overlay"></div>
              </div>
              
              <div class="product-content">
                <h3 class="product-title">{{ product.title }}</h3>
                <p class="product-variants">
                  {%- if product.variants.size > 1 -%}
                    {{ product.variants.size }} sizes
                  {%- else -%}
                    Available now
                  {%- endif -%}
                </p>
                <div class="product-pricing">
                  <span class="current-price">{{ product.price | money }}</span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="original-price">{{ product.compare_at_price | money }}</span>
                    <span class="discount-percent">
                      {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}% OFF
                    </span>
                  {%- endif -%}
                </div>
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- else -%}
        <!-- Fallback content when no collection is selected -->
        {%- for i in (1..6) -%}
          <div class="trending-product-card">
            <div class="product-badges">
              <div class="trend-score">{{ 85 | plus: i | plus: 7 }}% trend</div>
              <div class="trend-badge trend-{{ i | modulo: 5 | plus: 1 }}">
                {%- case i | modulo: 5 -%}
                  {%- when 0 -%}AI Pick
                  {%- when 1 -%}Viral
                  {%- when 2 -%}Hot
                  {%- when 3 -%}Rising
                  {%- when 4 -%}Trending
                {%- endcase -%}
              </div>
            </div>
            
            <div class="product-placeholder">
              <svg width="400" height="500" viewBox="0 0 400 500" fill="none">
                <rect width="400" height="500" fill="#F3F4F6"/>
                <path d="M150 200H250V300H150V200Z" stroke="#9CA3AF" stroke-width="4" stroke-linecap="round"/>
                <text x="200" y="400" font-family="Arial" font-size="20" fill="#9CA3AF" text-anchor="middle">Select Collection</text>
              </svg>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
    
    <!-- Section Footer -->
    <div class="section-footer">
      <div class="footer-content">
        <h3 class="footer-title">{{ section.settings.footer_title | default: 'Want more trending picks?' }}</h3>
        <p class="footer-subtitle">{{ section.settings.footer_subtitle | default: 'Get personalized recommendations based on your style preferences' }}</p>
      </div>
      <div class="footer-actions">
        {%- if section.settings.primary_button_text != blank -%}
          <a href="{{ section.settings.primary_button_link | default: '/collections/trending' }}" class="btn btn-primary">
            {{ section.settings.primary_button_text | default: 'Explore All Trending' }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_button_text != blank -%}
          <button class="btn btn-secondary" onclick="openPersonalizationModal()">
            {{ section.settings.secondary_button_text | default: 'Get My Picks' }}
          </button>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .fashun-trending {
    padding: 80px 0;
    background: #f9fafb;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 64px;
  }
  
  .trending-badge {
    margin-bottom: 16px;
  }
  
  .badge-text {
    display: inline-block;
    padding: 8px 16px;
    background: #dbeafe;
    color: #1e40af;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 700;
  }
  
  .section-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    color: #111827;
    margin-bottom: 16px;
  }
  
  .section-subtitle {
    font-size: clamp(18px, 2vw, 20px);
    color: #6b7280;
    max-width: 800px;
    margin: 0 auto 24px;
    line-height: 1.6;
  }
  
  .tracking-indicators {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    font-size: 14px;
    color: #6b7280;
    flex-wrap: wrap;
  }
  
  .indicator-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .indicator-dot {
    width: 12px;
    height: 12px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }
  
  .separator {
    color: #d1d5db;
  }
  
  .trending-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 32px;
    margin-bottom: 64px;
  }
  
  .trending-product-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out;
  }
  
  .trending-product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }
  
  .product-badges {
    position: absolute;
    top: 16px;
    left: 16px;
    right: 16px;
    z-index: 10;
    display: flex;
    justify-content: space-between;
  }
  
  .trend-score {
    background: linear-gradient(135deg, #2563eb, #7c3aed);
    color: white;
    padding: 6px 12px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
  }
  
  .trend-badge {
    padding: 6px 12px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 700;
    color: white;
  }
  
  .trend-1 { background: #2563eb; }
  .trend-2 { background: #dc2626; }
  .trend-3 { background: #ea580c; }
  .trend-4 { background: #16a34a; }
  .trend-5 { background: #7c3aed; }
  
  .product-stats {
    position: absolute;
    bottom: 16px;
    left: 16px;
    z-index: 10;
    color: white;
  }
  
  .stat-item {
    margin-bottom: 8px;
  }
  
  .stat-value {
    font-size: 14px;
    font-weight: 600;
  }
  
  .stat-label {
    font-size: 12px;
    opacity: 0.8;
  }
  
  .quick-view-btn {
    position: absolute;
    bottom: 16px;
    right: 16px;
    z-index: 10;
  }
  
  .btn-quick-view {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    color: #111827;
    padding: 8px 16px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .btn-quick-view:hover {
    background: white;
    transform: scale(1.05);
  }
  
  .product-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .product-image {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .trending-product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
  }
  
  .product-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.6), transparent 60%);
  }
  
  .product-content {
    padding: 24px;
  }
  
  .product-title {
    font-size: 20px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 8px;
    transition: color 0.3s ease;
  }
  
  .trending-product-card:hover .product-title {
    color: #2563eb;
  }
  
  .product-variants {
    color: #6b7280;
    margin-bottom: 16px;
  }
  
  .product-pricing {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .current-price {
    font-size: 24px;
    font-weight: 700;
    color: #111827;
  }
  
  .original-price {
    font-size: 18px;
    color: #9ca3af;
    text-decoration: line-through;
  }
  
  .discount-percent {
    font-size: 14px;
    font-weight: 700;
    color: #16a34a;
  }
  
  .section-footer {
    text-align: center;
  }
  
  .footer-content {
    max-width: 500px;
    margin: 0 auto 32px;
  }
  
  .footer-title {
    font-size: 20px;
    font-weight: 700;
    color: #111827;
    margin-bottom: 8px;
  }
  
  .footer-subtitle {
    color: #6b7280;
  }
  
  .footer-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 18px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }
  
  .btn-primary {
    background: #2563eb;
    color: white;
  }
  
  .btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-2px) scale(1.05);
  }
  
  .btn-secondary {
    background: white;
    color: #2563eb;
    border: 2px solid #2563eb;
  }
  
  .btn-secondary:hover {
    background: #2563eb;
    color: white;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .fashun-trending {
      padding: 60px 0;
    }
    
    .trending-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .tracking-indicators {
      flex-direction: column;
      gap: 8px;
    }
    
    .footer-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

