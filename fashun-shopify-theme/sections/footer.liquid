{% comment %}
  FASHUN.CO Footer Section
{% endcomment %}

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <!-- Brand Section -->
      <div class="footer-brand">
        <div class="footer-logo">
          {%- if settings.logo -%}
            <img src="{{ settings.logo | img_url: '150x' }}" alt="{{ shop.name }}">
          {%- else -%}
            <span class="logo-text">{{ shop.name }}</span>
          {%- endif -%}
        </div>
        <p class="brand-tagline">{{ settings.brand_tagline | default: 'Express Yourself. Stay Fresh. Be Iconic.' }}</p>
        
        <!-- Social Links -->
        <div class="social-links">
          {%- if settings.social_instagram_link -%}
            <a href="{{ settings.social_instagram_link }}" target="_blank" class="social-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
