{
  "version": 2,
  "buildCommand": "cd fashun-store && npm install && npm run build",
  "outputDirectory": "fashun-store/.next",
  "installCommand": "cd fashun-store && npm install",
  "framework": "nextjs",
  "rootDirectory": "fashun-store",
  "redirects": [
    {
      "source": "/shop",
      "destination": "/collections/all",
      "permanent": true
    },
    {
      "source": "/privacy",
      "destination": "/privacy-policy", 
      "permanent": true
    }
  ],
  "functions": {
    "fashun-store/src/app/api/**": {
      "runtime": "nodejs18.x"
    }
  }
}