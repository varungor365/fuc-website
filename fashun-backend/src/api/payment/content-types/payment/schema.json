{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": "Payment transactions and records"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "paymentId": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 255
    },
    "stripePaymentIntentId": {
      "type": "string",
      "maxLength": 255
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "payments"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "currency": {
      "type": "string",
      "default": "INR",
      "maxLength": 3
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "succeeded",
        "failed",
        "canceled",
        "refunded",
        "partially_refunded"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "string",
      "maxLength": 100
    },
    "paymentMethodDetails": {
      "type": "json"
    },
    "billingAddress": {
      "type": "component",
      "repeatable": false,
      "component": "order.address"
    },
    "receiptUrl": {
      "type": "string",
      "maxLength": 500
    },
    "failureReason": {
      "type": "string",
      "maxLength": 255
    },
    "processedAt": {
      "type": "datetime"
    },
    "refundedAmount": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "fees": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "netAmount": {
      "type": "decimal",
      "min": 0
    },
    "metadata": {
      "type": "json"
    },
    "webhookEvents": {
      "type": "json"
    },
    "riskScore": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "fraudDetected": {
      "type": "boolean",
      "default": false
    }
  }
}