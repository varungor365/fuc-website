{
  "collectionName": "components_order_order_items",
  "info": {
    "displayName": "Order Item",
    "description": "Individual items within an order"
  },
  "options": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product"
    },
    "productName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "productSku": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "variantSize": {
      "type": "string",
      "maxLength": 50
    },
    "variantColor": {
      "type": "string",
      "maxLength": 100
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unitPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "totalPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "customization": {
      "type": "json"
    },
    "mockupUrl": {
      "type": "string"
    },
    "designData": {
      "type": "json"
    },
    "productImage": {
      "type": "string"
    }
  }
}