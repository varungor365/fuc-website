    "size": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "color": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "colorHex": {
      "type": "string",
      "maxLength": 7
    },
    "sku": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "stock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "lowStockThreshold": {
      "type": "integer",
      "default": 5,
      "min": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "weight": {
      "type": "decimal",
      "min": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
