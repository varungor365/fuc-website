{
  "collectionName": "components_product_inventory",
  "info": {
    "displayName": "Product Inventory",
    "description": "Inventory tracking and stock management"
  },
  "options": {},
  "attributes": {
    "trackQuantity": {
      "type": "boolean",
      "default": true
    },
    "allowBackorders": {
      "type": "boolean",
      "default": false
    },
    "stockStatus": {
      "type": "enumeration",
      "enum": ["in_stock", "out_of_stock", "low_stock"],
      "default": "in_stock"
    },
    "totalStock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "reservedStock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "availableStock": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "lowStockThreshold": {
      "type": "integer",
      "default": 10,
      "min": 0
    }
  }
}