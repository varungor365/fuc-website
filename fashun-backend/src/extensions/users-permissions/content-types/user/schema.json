{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "description": "",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "unique": true,
      "configurable": false,
      "required": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "configurable": false,
      "required": true
    },
    "provider": {
      "type": "string",
      "configurable": false
    },
    "password": {
      "type": "password",
      "minLength": 6,
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "resetPasswordToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "blocked": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users",
      "configurable": false
    },
    "firstName": {
      "type": "string",
      "maxLength": 100
    },
    "lastName": {
      "type": "string",
      "maxLength": 100
    },
    "phone": {
      "type": "string",
      "maxLength": 20
    },
    "dateOfBirth": {
      "type": "date"
    },
    "gender": {
      "type": "enumeration",
      "enum": ["male", "female", "other", "prefer_not_to_say"]
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    },
    "wishlist": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "loyaltyPoints": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "loyaltyTier": {
      "type": "enumeration",
      "enum": ["bronze", "silver", "gold", "platinum"],
      "default": "bronze"
    },
    "isVip": {
      "type": "boolean",
      "default": false
    },
    "referralCode": {
      "type": "string",
      "unique": true,
      "maxLength": 20
    },
    "referredBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "referrals": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "referredBy"
    },
    "preferences": {
      "type": "json"
    },
    "browsingHistory": {
      "type": "json"
    },
    "badges": {
      "type": "json"
    },
    "addresses": {
      "type": "component",
      "repeatable": true,
      "component": "user.address"
    },
    "notifications": {
      "type": "component",
      "repeatable": false,
      "component": "user.notification-settings"
    },
    "subscriptions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subscription.subscription",
      "mappedBy": "customer"
    },
    "affiliateProfile": {
      "type": "component",
      "repeatable": false,
      "component": "user.affiliate-profile"
    },
    "totalSpent": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "lastLoginAt": {
      "type": "datetime"
    },
    "emailVerifiedAt": {
      "type": "datetime"
    },
    "marketingOptIn": {
      "type": "boolean",
      "default": false
    }
  }
}