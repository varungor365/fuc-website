<div class="section-newsletter-container {% if section.settings.inverted %} section-newsletter--alt{% endif %}">
  {% if section.settings.title != blank %}
    <h2 class="text-center section-heading">{{ section.settings.title | escape }}</h2>
  {% endif %}

  <div class="text-center">
    {% include 'newsletter-form' %}
  </div>
</div>
{% schema %}
  {
    "name": "Newsletter",
    "class": "section-newsletter",
    "settings": [
      {
        "type": "checkbox",
        "id": "inverted",
        "label": "Invert color",
        "default": false
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Subscribe to Our Newsletter"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "SUBSCRIBE"
      },
      {
        "type": "paragraph",
        "content": "Learn more about [newsletter](https://help.shopify.com/manual/using-themes/change-the-layout/theme-newsletter#sectioned-themes)"
      }
    ],
    "presets": [
      {
        "name": "Newsletter",
        "category": "Misc"
      }
    ]
  }
{% endschema %}
