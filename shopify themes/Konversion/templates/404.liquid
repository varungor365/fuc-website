
<div class="not-found-page-template {{ settings.404_horizontal_align }} {{ settings.404_vertical_align }}">
  <div class="content-middle">
    <div class="content-inner">

      {% if settings.404_title_size == 'small' %}
        <h4 class="not-found-page_title" >{{ 'general.404.title' | t }}</h4>
      {% elsif settings.404_title_size == 'normal' %}
        <h3 class="not-found-page_title" >{{ 'general.404.title' | t }}</h3>
      {% elsif settings.404_title_size == 'big' %}
        <h1 class="not-found-page_title" >{{ 'general.404.title' | t }}</h1>
      {% endif %}

        <p class="not-found-page_description">{{ 'general.404.subtext' | t }}</p>
        <p><a href="/" class="btn btn--special">{{ 'general.404.link' | t }}</a></p>

    </div>
  </div>
</div>
