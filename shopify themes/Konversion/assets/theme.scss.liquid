    text-decoration: none;
    font-weight: inherit;
  }
}

h1 {
  font-size: rem(floor($font-size-heading * 1.35));
  text-transform: none;
  letter-spacing: 0;

  @include at-query($max, $small) {
    font-size: rem(floor(($font-size-heading * 1.35) * 0.9));
  }
}

