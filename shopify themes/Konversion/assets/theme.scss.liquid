      height: 25px;
      width: 25px;
      border-style: solid;
      border-width: 4px 4px 0 0;
      @include transform(rotate(-45deg));
    }

    &.mfp-chevron-right {
      right: 55px;

      &:before {
        @include transform(rotate(45deg));
      }
    }

    &.mfp-chevron-left {
      left: 55px;

      &:before {
        @include transform(rotate(-135deg));
      }
    }
  }


  .lt-ie9 {
