}



.slider {
  &:not(.slick-initialized) {
    .collection-list__item:nth-child(1n+2) {
      display: none;
    }
  }
}

/*================ Featured Collection Section ================*/

.section-featured-collection {
  .product-list {
    text-align: center;
    @include at-query($max, $pre-large) {
      &.grid--uniform {
        {% unless settings.margin_on_mobile %}
          margin-left: -5px;
        {% endunless %}
      }
      &>.grid__item {
        padding-left: 5px;
        {% if settings.margin_on_mobile %}
          padding-right: 5px;
        {% endif %}
      }
      &.product-list--col-1 {
        &.grid--uniform {
          margin-left: 0;
        }
        &>.grid__item {
          padding-left: $gutter;
          padding-right: $gutter;
        }
      }
    }
    @include at-query($min, $large) {
      &.grid--uniform {
      	margin-left: -($gutter / 2);
      }
      &>.grid__item {
        padding-left: $gutter / 2;
        margin-bottom: $gutter;
      }
    }
    .grid__item {
      float: none;
      display: inline-block;
      @include at-query($max, $pre-large) {
        margin-bottom: $gutter / 2;
		&.medium-down--one-half {
      	  width: calc(50% - 2px);
        }
      }
      @include at-query($min, $large) {
        margin-bottom: $gutter;
        &.large--one-quarter {
      	  width: calc(25% - 3px);
        }
        &.large--one-third {
          width: calc(33.333% - 3px);
        }
        &.large--one-half {
          width: calc(50% - 2px);
        }
      }
    }
  }
  @include at-query($min, $medium) {
    padding: 0 $gutter $gutter;
  }
}

/*================ Featured Products Section ================*/

.section-featured-products {
  .product-list {
    .slick-list {
      {% unless settings.margin_on_mobile %}
        margin-left: -5px;
      {% endunless %}
    }
  }
  .product-list__item {
    margin-left: 5px;
    {% if settings.margin_on_mobile %}
      margin-right: 5px;
    {% endif %}
  }
  @include at-query($min, $medium) {
    padding: 0 $gutter $gutter;
  }
  @include at-query($min, $large) {
    @extend .page-width--large--important;
  }
}

.slider {
  &:not(.slick-initialized) {
    .product-list__item:nth-child(1n+2) {
      display: none;
    }
  }

  /*================ Desktop Version ================*/
  @include at-query($min, $large) {
    .product-list__item {
      margin-left: $gutter;
    }
  }
}

@include at-query($max, $small) {
  .no-slider--grid {
    .one-whole {
      .product-card {
        margin: $gutter;
      }
    }
  }
}
/*================ Featured Product Section ================*/

.section-featured-product {
  .product-list__item {
    margin: 0 20%;
  }
}

/*================ Icon List Section ================*/

.section-icon-list {
