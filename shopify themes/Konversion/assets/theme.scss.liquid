  font-size: rem(floor($font-size-heading * 1.25));
  text-transform: inherit;
  letter-spacing: 0.1em;

  @include at-query($max, $small) {
    font-size: rem(floor(($font-size-heading * 1.25) * 0.9));
  }
}

h3 {
  font-size: rem($font-size-heading);
  text-transform: none;
  letter-spacing: 0;

  @include at-query($max, $small) {
    font-size: rem(floor($font-size-heading * 0.9));
  }
}

h4 {
  font-size: rem(floor($font-size-heading * 0.85));

  @include at-query($max, $small) {
