  .slick-active &,
  .supports-no-js & {
    @include transform(translateY(-50%));
    opacity: 1;
  }

  &::after {
    content: '';
    @include spinner(40px, $slideshow-loader);
    @include animation(spin 0.65s infinite linear);
    opacity: 1;
    transition: all 1s cubic-bezier(0.29, 0.63, 0.44, 1);
    bottom: -$gutter;
    left: 50%;
  }

  .slick-initialized &,
  .supports-no-js & {
    &::after {
      opacity: 0;
      visibility: hidden;
      content: none;
    }
  }
}

/*================ Separator Section ================*/

.section-separator {
  .separator-inner {
    margin-bottom: $gutter;
  }
}
/*================ Content Section ================*/

.section-content {

  .section-content__wrapper {
    margin: $gutter;
  }

  .section-custom-content--alt {
    @include inverted-section();
  }

  .custom__item-content--text {
    @extend .normal-section-padding;
    .custom__item-heading,
    .custom__item-text {
      margin-bottom: $gutter;
    }
  }
  @include at-query($min, $medium) {
    .custom__item-content--text {
      padding-left: 0;
      padding-right: 0;
    }
    .large--one-whole .custom__item-content--text {
      margin-left: $gutter * 3;
      margin-right: $gutter * 3;
    }
  }

  .custom__item-content--image {
    img {
      width: 100%;
      margin-bottom: -6px;
    }
  }
}
/*================ Featured Collections Section ================*/

.section-featured-collections {
