{% if link.title == "global" or link.title contains "global/" or link.title == product_match %}
  {% assign tab_content = link.object.content %}
  {% assign tab_link = link.url | replace: '#', '' | downcase %}

{% else %}
  {% for collection in product.collections %}
    {% assign collection_match = collection.handle | prepend: "collection/" %}
    {% if link.title == collection_match %}
      {% assign tab_content = link.object.content %}
      {% break %}
    {% endif %}
  {% endfor %}
{% endif %}

