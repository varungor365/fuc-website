{% if settings.deal_of_the_day_enabled %}


    <style>
        .deal-of-the-day-product > .progress-bar > .bar{
            background-color: {{ settings.deal_of_the_day_progressbar_color }};
        }
    </style>
    <div class="deal-of-the-day-product" product-id="{{ product.id }}" style="display: none;">
        <p><i class="fa fa-clock-o fa-1x"></i> {{ settings.deal_of_the_day_product_text }} <span class="countdown"></span></p>
        <div class="progress-bar">
            <span class="bar"></span>
        </div>
    </div>
{% endif %}
