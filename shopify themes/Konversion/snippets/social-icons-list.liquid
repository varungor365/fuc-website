{%- assign has_icons = false -%}

{% if
  settings.social_twitter_link != blank
  or settings.social_facebook_link != blank
  or settings.social_instagram_link != blank
  or settings.social_tumblr_link != blank
  or settings.social_pinterest_link != blank
  or settings.social_youtube_link != blank
  or settings.social_snapchat_link != blank
%}
  {%- assign has_icons = true -%}
{% endif %}

{% if has_icons %}

  <ul class="inline-list social-icons" >
    {% if settings.social_facebook_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_facebook_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Facebook' }}">
          <span class="icon icon-facebook" aria-hidden="true"></span>
          <span class="fallback-text">Facebook</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_twitter_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_twitter_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Twitter' }}">
          <span class="icon icon-twitter" aria-hidden="true"></span>
          <span class="fallback-text">Twitter</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_instagram_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_instagram_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Instagram' }}">
          <span class="icon icon-instagram" aria-hidden="true"></span>
          <span class="fallback-text">Instagram</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_tumblr_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_tumblr_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Tumblr' }}">
          <span class="icon icon-tumblr" aria-hidden="true"></span>
          <span class="fallback-text">Tumblr</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_pinterest_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_pinterest_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Pinterest' }}">
          <span class="icon icon-pinterest" aria-hidden="true"></span>
          <span class="fallback-text">Pinterest</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_youtube_link != blank %}
      <li>
        <a class="icon-fallback-text" href="{{ settings.social_youtube_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'YouTube' }}">
          <span class="icon icon-youtube" aria-hidden="true"></span>
          <span class="fallback-text">YouTube</span>
        </a>
      </li>
    {% endif %}
    {% if settings.social_snapchat_link != blank %}
      <li class="large--hide">
        <a class="icon-fallback-text" href="{{ settings.social_snapchat_link }}" target="_blank" title="{{ 'layout.social_account' | t: name: shop.name, platform: 'Snapchat' }}">
          <span class="icon icon-snapchat" aria-hidden="true"></span>
          <span class="fallback-text">Snapchat</span>
        </a>
      </li>
    {% endif %}
  </ul>
{% endif %}
