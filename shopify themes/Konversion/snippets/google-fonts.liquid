
{% if settings.font_family_base_other == 'none' %}

  {% if settings.font_family_base contains 'Google' %}
    {%- assign font_base_parts = settings.font_family_base | split: '_' -%}
    {% capture baseGoogleUrl %}{{ font_base_parts[1] }}:400,700{% endcapture %}
    {{ '//fonts.googleapis.com/css?family=' | append: baseGoogleUrl | stylesheet_tag }}
  {% endif %}
{% else %}

  {%- assign font_family_base_other_parts = settings.font_family_base_other | split: '_' -%}
  {% capture baseOtherGoogleUrl %}{{ font_family_base_other_parts[0] }}:{{ font_family_base_other_parts[1] }}{% endcapture %}
  {{ '//fonts.googleapis.com/css?family=' | append: baseOtherGoogleUrl | stylesheet_tag }}
  
{% endif %}

{% if settings.font_family_headings_other == 'none' %}

  {% if settings.font_family_headings contains 'Google' %}
    {% unless settings.font_family_headings contains font_base_parts[1] and settings.font_family_headings contains '700' %}
      {%- assign font_headings_parts = settings.font_family_headings | split: '_' -%}
      {% capture headerGoogleUrl %}{{ font_headings_parts[1] }}:{{ font_headings_parts[2] }}{% endcapture %}
      {{ '//fonts.googleapis.com/css?family=' | append: headerGoogleUrl | stylesheet_tag }}
    {% endunless %}
  {% endif %}

{% else %}

    {%- assign font_headings_other_parts = settings.font_family_headings_other | split: '_' -%}
    {% capture headerOtherGoogleUrl %}{{ font_headings_other_parts[0] }}:{{ font_headings_other_parts[1] }}{% endcapture %}
    {{ '//fonts.googleapis.com/css?family=' | append: headerOtherGoogleUrl | stylesheet_tag }}

{% endif %}
