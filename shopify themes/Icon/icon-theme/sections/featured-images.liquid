<section class="index-section homepage-section homepage-promo no-fouc" data-section-id="{{ section.id }}" >
  <article id="promo-images" class="row">
    {%- assign image_size = '1200x' -%}    
    {% for block in section.blocks %}
    {% case block.settings.image_width %}
    {% when '25%' %}
    {%- assign image_width = 'desktop-3 tablet-fourth' -%}
    {% when '33%' %}
    {%- assign image_width = 'desktop-4 tablet-2' -%}
    {% when '50%' %}
    {%- assign image_width = 'desktop-6 tablet-3' -%}
    {% when '66%' %}
    {%- assign image_width = 'desktop-8 tablet-4' -%}
    {% when '75%' %}
    {%- assign image_width = 'desktop-9 tablet-three-fourths' -%} 
    {% when '100%' %}
    {%- assign image_width = 'desktop-12 tablet-6' -%}     
    {% endcase %}  


    {%- assign img_url = block.settings.image | img_url: image_size -%}
    <div class="pimg homepage-promo {{ image_width }} mobile-3 promo-{{ block.id }}" {{ block.shopify_attributes }}>  
      <div class="promo-inner">
        <a href="{{ block.settings.link }}">
          {% if block.settings.image != blank %}
          <img src="{{ img_url }}">
          {% else %}
          <div class="onboard">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          {% endif %}
          <div class="caption">
            {% if block.settings.title_text != blank %}
            <p>{{ block.settings.title_text | escape }}</p>
            {% endif %}
          </div>
        </a>
      </div>      
    </div>
    
    <style>
      .homepage-promo.promo-{{ block.id }} .promo-inner p {
        color: {{ block.settings.promo_color }};
      }
      /* IMAGE BLOCKS */
      section.homepage-promo { 
        background-color: {{ section.settings.promo-background-color }};
      }   
      
      section.homepage-promo, section.homepage-promo .caption p { 
        font-size: {{ section.settings.promo-text-size }}; 
        font-weight: {{ section.settings.promo-text-weight }};
      }

    </style>
    {% endfor %}
    {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
    {% endif %}
  </article>
</section>



