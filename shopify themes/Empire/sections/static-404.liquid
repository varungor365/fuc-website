<script
  type="application/json"
  data-section-type="static-404"
  data-section-id="{{ section.id }}">
</script>

<section class="fourohfour--container">
  <header class="fourohfour-title">
    <h1>{{ '404.general.title' | t }}</h1>
  </header>

  <div class="fourohfour--inner">
    <p>{{ '404.general.text' | t }}</p>

    {% if section.settings.continue_url != blank %}
      <a class="button-primary" href="{{ section.settings.continue_url }}">{{ '404.general.continue_shopping' | t }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "404 pages",
  "class": "fourohfour--section",
  "settings": [
    {
      "type": "url",
      "id": "continue_url",
      "label": "Continue shopping button link",
      "info": "Where to direct customers after clicking \"Continue shopping\""
    }
  ],
  "default": {
    "settings": {
      "continue_url": "shopify:\/\/collections\/all"
    }
  }
}

{% endschema %}