<div class="container">
  <div class="sixteen columns">
    <div class="section clearfix">
      <h1 class="banner_title">{{ page.title }}</h1>
    </div>
  </div>
</div>

{% if section.settings.image %}
  <img  src="{{ section.settings.image | img_url: '1200x' }}"
        class="banner_image lazyload transition-in"
        sizes="100vw"
        srcset="{{ section.settings.image | img_url: '480x' }} 480w,
                {{ section.settings.image | img_url: '768x' }} 768w,
                {{ section.settings.image | img_url: '1200x' }} 1200w,
                {{ section.settings.image | img_url: '2048x2048' }} 2048w"
         />
{% else %}
  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--banner' }}
{% endif %}

<div class="container">
  <div class="sixteen columns">
    <div class="section clearfix">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Banner",
    "class": "banner-template-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "1600 x 600px recommended"
      }
    ]
  }
{% endschema %}
