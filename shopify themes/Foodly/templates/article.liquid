                        </div> <!-- End form__row-block -->
                      </div> <!-- End form__row -->

                      <button class="btn btn--default btn--full" type="submit">{{ 'blogs.comments.post' | t }}</button>

                    {% endform %}

                  {% endpaginate %}
                </div> <!-- End comments -->
              </div> <!-- End grid__item -->
            </div> <!-- End grid -->
          </div> <!-- End wrapper -->

        {% endif %}
      </div> <!-- End parallax__base -->
    </section>
  </div> <!-- End parallax -->

{% endif %}
