  	  </div>
  	{% endif %}
  	<a class="btn btn--underlines" href="{{ settings.homepage_special_2_btn_url }}" tilte="{{ 'layout.general.check_it_button' | t }}">{{ 'layout.general.check_it_button' | t | upcase }}</a>
  </div>
{% endif %}