                <h3 class="heading--add-small">{{ 'cart.general.heading' | t | upcase }}</h3>
                <!-- End shop logo -->
                <button class="drawer__btn-close btn" type="button">
                  <span>{{ 'layout.cart.close_cart' | t }}</span>
                </button>
              </div> <!-- end drawer__header -->

              <hr class="hr--clear">

