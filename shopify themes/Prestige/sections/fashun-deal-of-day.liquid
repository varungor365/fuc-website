{% comment %}
  FASHUN.CO Deal of the Day Section
  Flash sale with countdown timer
{% endcomment %}

<section class="fashun-deal-of-day" id="fashun-deal-{{ section.id }}">
  <div class="container">
    <div class="deal-container">
      <div class="deal-grid">
        <!-- Product Image -->
        <div class="deal-image">
          {%- assign featured_product = all_products[section.settings.featured_product] -%}
          {%- if featured_product != blank and featured_product.featured_media -%}
            <img 
              src="{{ featured_product.featured_media | img_url: '800x800' }}"
              alt="{{ featured_product.title | escape }}"
              loading="lazy"
              width="800"
              height="800"
            >
          {%- else -%}
            <div class="deal-placeholder">
              <svg width="600" height="600" viewBox="0 0 600 600" fill="none">
                <rect width="600" height="600" fill="#F3F4F6"/>
                <path d="M200 250H400V350H200V250Z" stroke="#9CA3AF" stroke-width="4" stroke-linecap="round"/>
                <text x="300" y="450" font-family="Arial" font-size="24" fill="#9CA3AF" text-anchor="middle">Deal of the Day</text>
              </svg>
            </div>
          {%- endif -%}
          
          <div class="deal-badges">
            <div class="discount-badge">
              {%- if featured_product != blank and featured_product.compare_at_price > featured_product.price -%}
                -{{ featured_product.compare_at_price | minus: featured_product.price | times: 100 | divided_by: featured_product.compare_at_price | round }}%
              {%- else -%}
                -50%
              {%- endif -%}
            </div>
            <div class="stock-badge">
              {{ section.settings.stock_text | default: 'Only 23 left!' }}
            </div>
          </div>
        </div>
        
        <!-- Product Details -->
        <div class="deal-content">
          <div class="deal-header">
            <div class="deal-label">
              <span class="fire-icon">üî•</span>
              <span class="label-text">{{ section.settings.deal_label | default: 'Deal of the Day' }}</span>
            </div>
            
            <h2 class="deal-title">
              {%- if featured_product != blank -%}
                {{ featured_product.title }}
              {%- else -%}
                {{ section.settings.fallback_title | default: 'Premium Streetwear Hoodie Collection' }}
              {%- endif -%}
            </h2>
            
            <!-- Rating -->
            <div class="deal-rating">
              <div class="stars">
                {%- for i in (1..5) -%}
                  <span class="star">‚òÖ</span>
                {%- endfor -%}
              </div>
              <span class="rating-text">
                {{ section.settings.rating | default: '4.8' }} ({{ section.settings.reviews | default: '127' }} reviews)
              </span>
            </div>
            
            <!-- Pricing -->
            <div class="deal-pricing">
              {%- if featured_product != blank -%}
                <span class="current-price">{{ featured_product.price | money }}</span>
                {%- if featured_product.compare_at_price > featured_product.price -%}
                  <span class="original-price">{{ featured_product.compare_at_price | money }}</span>
                  <span class="savings">Save {{ featured_product.compare_at_price | minus: featured_product.price | money }}</span>
                {%- endif -%}
              {%- else -%}
                <span class="current-price">‚Çπ4,499</span>
                <span class="original-price">‚Çπ8,999</span>
                <span class="savings">Save ‚Çπ4,500</span>
              {%- endif -%}
            </div>
          </div>
          
          <!-- Countdown Timer -->
          <div class="countdown-section">
            <h3 class="countdown-title">{{ section.settings.countdown_title | default: 'Deal Expires In' }}</h3>
            <p class="countdown-subtitle">{{ section.settings.countdown_subtitle | default: 'Hurry! This exclusive offer won\'t last long.' }}</p>
            
            <div class="countdown-timer" id="countdown-{{ section.id }}">
              <div class="time-unit">
                <div class="time-value" data-days>00</div>
                <div class="time-label">Days</div>
              </div>
              <div class="time-unit">
                <div class="time-value" data-hours>00</div>
                <div class="time-label">Hours</div>
              </div>
              <div class="time-unit">
                <div class="time-value" data-minutes>00</div>
                <div class="time-label">Minutes</div>
              </div>
              <div class="time-unit">
                <div class="time-value" data-seconds>00</div>
                <div class="time-label">Seconds</div>
              </div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="deal-actions">
            {%- if featured_product != blank -%}
              <form action="/cart/add" method="post" enctype="multipart/form-data" class="deal-form">
                <input type="hidden" name="id" value="{{ featured_product.selected_or_first_available_variant.id }}">
                <button type="submit" class="btn btn-primary deal-add-to-cart">
                  {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
                </button>
              </form>
              <a href="{{ featured_product.url }}" class="btn btn-secondary deal-view-details">
                {{ section.settings.view_details_text | default: 'View Details' }}
              </a>
            {%- else -%}
              <button class="btn btn-primary deal-add-to-cart" disabled>
                {{ section.settings.add_to_cart_text | default: 'Add to Cart' }}
              </button>
              <button class="btn btn-secondary deal-view-details" disabled>
                {{ section.settings.view_details_text | default: 'View Details' }}
              </button>
            {%- endif -%}
          </div>
          
          <!-- Guarantees -->
          <div class="deal-guarantees">
            <div class="guarantee-item">
              <div class="guarantee-icon">üöö</div>
              <div class="guarantee-content">
                <div class="guarantee-title">{{ section.settings.guarantee_1_title | default: 'Free Shipping' }}</div>
                <div class="guarantee-desc">{{ section.settings.guarantee_1_desc | default: 'On orders over ‚Çπ2,999' }}</div>
              </div>
            </div>
            <div class="guarantee-item">
              <div class="guarantee-icon">‚Ü©Ô∏è</div>
              <div class="guarantee-content">
                <div class="guarantee-title">{{ section.settings.guarantee_2_title | default: 'Easy Returns' }}</div>
                <div class="guarantee-desc">{{ section.settings.guarantee_2_desc | default: '30-day return policy' }}</div>
              </div>
            </div>
            <div class="guarantee-item">
              <div class="guarantee-icon">üõ°Ô∏è</div>
              <div class="guarantee-content">
                <div class="guarantee-title">{{ section.settings.guarantee_3_title | default: 'Authentic' }}</div>
                <div class="guarantee-desc">{{ section.settings.guarantee_3_desc | default: '100% genuine products' }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

