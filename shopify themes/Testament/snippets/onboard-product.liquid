{% comment %}Used for home page sections only when featured products is chosen but no content has been selected{% endcomment %}

<div class="collection-carousel desktop-12 tablet-6 mobile-3" id="carousel-{{ section.id }}">  
{% for i in (1..prod_limit) %}
{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
  {%- assign placeholder = 'product-' | append: current -%}
  <div class="lazyOwl product-index">     
    <div class="onboard">
      <a href="{{ product.url | within: collection }}" title="{{ product.title | escape }}">
        <div class="reveal">
          {{ placeholder | placeholder_svg_tag }}
        </div>
      </a>
    </div>
    <div class="product-info"> 
      <div class="product-info-inner"> 
        <a href="#"> 
          <h3>Sample product {{ forloop.index }}</h3>              
        </a>  
        <div class="price">
          9.99
        </div>
      </div>        
    </div>
  </div>
  {% endfor %} 
</div>