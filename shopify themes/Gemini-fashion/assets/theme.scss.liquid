$swatch-color-size: 30px;

.swatch { 
  margin-bottom: 1em;

  /* Hide radio buttons.*/
  input {
    display: none;

    &:checked {
      + label {
        @include prefix('box-shadow', 0 0 0 3px rgba(0,0,0,0.1), webkit moz spec);
      }
    }
  }

  .swatch__title {
    margin-bottom: 1em;
    text-transform: uppercase;
  }

  .swatch-element {
    @include prefix(transform, translateZ(0), webkit ms spec);

    position: relative;
    float: left;
    margin: 0 10px 10px 0;

    @include media-query($small) {
      float: none;
      display: inline-block;
      margin: 0 5px 10px;
    }
  }

  label {
    @include prefix(transition, box-shadow 0.25s ease-out, webkit o spec);

    @include font-size(12);

    position: relative; /* to overflow hidden crossed-out */
    display: block;
    width: $swatch-color-size;
    height: $swatch-color-size;
    margin: 0;
    padding: 0;
    border: 1px solid $color-border;
    background-color: #efefef;
    background-size: 80%;
    background-position: center center;
    background-repeat: no-repeat;
    line-height: $swatch-color-size;
    text-align: center;
    text-transform: uppercase;
    white-space: nowrap;
    overflow: hidden;

    &:hover {
      @include prefix('box-shadow', 0 0 0 3px rgba(0,0,0,0.15), webkit moz spec);
    }
  }

  /* error when include gemini-swatch */
  &.error {
    background-color:#E8D2D2!important;
    color:#333!important;
    padding:1em;
    border-radius:5px;

    p {
      margin:0.7em 0;

      &:first-child {
        margin-top:0;
      }

      &:last-child {
        margin-bottom:0;
      }
    }

    code {
      font-family:monospace;
    }
  }
}

/* Image with the cross in it */
.crossed-out {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.swatch-element {
  .crossed-out {
    display: none;
  }

  &.circle {
    label {
      @include prefix('border-radius', 50%, webkit moz spec);
    }
  }

  &.square {
    label {
      @include prefix('border-radius', 0, webkit moz spec);
    }
  }

  &.other,
  &.size,
  &.material {
    label {
      width: auto;
      padding: 0 10px;
      background-color: transparent;
    }
  }

  &.soldout {
    .crossed-out {
      display: block;
    }

    label {
      @include opacity(0.6);

      &:hover {
        @include prefix('box-shadow', none, webkit moz spec);
      }
    }
  }

  &:hover {
    .color-tooltip {
      @include opacity(0.9);

      visibility: visible;

      /* Fix double-tab problem on ios */
      @media only screen and (max-width: 1024px) {
        display: none;
      }
    }
  }
}

.color-tooltip {
  @extend %interactive-item__label;

  @include font-size(12);

  bottom: 135%;

  /* Fix double-tab problem on ios */
  @media only screen and (max-width: 1024px) {
    display: none;
  }
}

