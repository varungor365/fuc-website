      display: block;
      content: "";
    }
  }

  @mixin loop($columns, $gapRatio) {
    &.x#{$columns} {
      .item {
        // In total, we have:
        //   $columns columns
        //   and ($columns - 1) gaps
        $width: 100% / ($columns + ($columns - 1) * $gapRatio);

        width: $width;
        margin-right: $width * $gapRatio;

        // Tricky bottom gap
        &:after {
          padding-bottom: percentage($gapRatio);
        }

        &:nth-child(#{$columns}n) {
          margin-right: 0;
        }
      }

      // What is gapless?
      // Well, no gap at all
      &.gapless .item {
        width: 100% / $columns;
        margin-right: 0;

        &:after {
          padding-bottom: 0;
        }
      }
    }
  }

  @mixin tiles($maximumSupport, $gapRatio: 0.1) {
    @while $maximumSupport > -1 {
      @include loop($maximumSupport, $gapRatio);
      $maximumSupport: $maximumSupport - 1;
    }
  }

  @include tiles(12);
}

