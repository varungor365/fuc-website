/*=== Opacity ===*/
@mixin opacity($value) {
  $percent_value: ($value * 100);

  /* Theoretically for IE 8 & 9 (more valid) */
  /* ...but not required as filter works too */
  /* should come BEFORE filter */
  -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=#{$percent_value})"; // IE8

  /* This works in IE 8 & 9 too */
  /* ... but also 5, 6, 7 */
  filter: alpha(opacity=#{$percent_value}); // IE 5-7

  /* Modern Browsers */
  opacity: $value;
}

