  padding-left: 8em;
  text-transform: capitalize;

  @include media-query($small) {
    padding-left: 0;
  }

  .label {
    position: absolute;
    left: 0;
    font-weight: 500;

    @include media-query($small) {
      position: relative;
    }
  }

  .content {
    position: relative;
    text-transform: none;

    @include media-query($small) {
      position: relative;
      left: auto;
    }

    .product-info-wrapper--full & {
      position: relative;
      left: auto;
    }

    &.info {
      color: $color-info;
    }

    &.success {
      color: $color-success;
    }

    &.error {
      color: $color-error;
    }

    &.warning {
      color: $color-warning;
    }

    &.disable {
      color: $color-disabled;
    }
  }
