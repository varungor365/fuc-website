.list-collections-section {
  padding: 50px 0;
}

.list-collections__title {
  @include font-size(24);

  margin: 0 0 30px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-family: $font-stack-heading;
}

.list-collections-item {
  @include rectangle-maker(1);

  margin-bottom: 30px;

  a {
    &:hover {
      color: currentcolor;

      .list-collections-item__image {
        // @include prefix(transform, scale(1.05, 1.05), webkit ms spec);

        &:after {
          @include opacity(0.85);

          @include prefix(transform, scale(1, 1), webkit ms spec);

          @media only screen and (max-width: 1024px) {
            @include opacity(0);
          }
        }
      }

      .list-collections-item__content {
        @include opacity(1);
      }
    }
  }
}

.list-collections-item__image {
  @include prefix(transform, translateZ(0), webkit ms spec);
  @include prefix(transition, transform 0.35s ease-in-out, webkit o spec);

  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #efefef;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  z-index: -1;

  .placeholder-svg {
    border: 0;
  }

  &:after {
    @include opacity(0);

    @include prefix(transform, scale(0, 0), webkit ms spec);
    @include prefix(transition, all 0.35s ease-in-out, webkit o spec);

    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: $white;
  }
}

.list-collections-item__content {
  @include opacity(0);

  @include prefix(transform, translate3d(-50%, -50%, 0), webkit ms spec);
  @include prefix(transition, opacity 0.2s ease-in-out 0.2s, webkit o spec);

  position: absolute;
  top: 50%;
  left: 50%;
  text-align: center;

  @media only screen and (max-width: 1024px) {
    @include opacity(1);

    @include prefix(transform, translate3d(0, 0, 0), webkit ms spec);

    top: auto;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem 3rem 1.5rem;
    background-color: rgba(255, 255, 255, 0.85);
  }

  @include media-query($small) {
    padding: 0.5rem 1.5rem 1rem;
  }
}

.list-collections-item__title {
  @include font-size(20);

  margin: 0 0 10px;
  font-weight: 500;
  letter-spacing: 2px;

  @include media-query($medium) {
    margin-bottom: 5px;
  }

  @include media-query($small) {
    margin-bottom: 0;
  }
}

.list-collections-item__products-count {
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: $color-text-light;
}

