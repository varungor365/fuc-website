}

/*=== vendor prefix for calc() ===*/
@mixin calc-vendor-prefix($property, $value) {
  #{$property}: -webkit-calc(#{$value});
  #{$property}: -moz-calc(#{$value});
  #{$property}: calc(#{$value});
}

/*=== vendor prefix for cursor ===*/
@mixin cursor-prefix($value) {
  cursor: -webkit-#{$value};
  cursor: -moz-#{$value};
  cursor: #{$value};
}

