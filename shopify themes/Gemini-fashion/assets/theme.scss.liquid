.product-form-wrapper {
  margin-top: -1px;
  padding: 25px 0;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.stock {
  display: none; // default, will be update by js when init product.
}

.stock__label {
  display: inline-block;
  margin: 0;
  padding: 0 30px;
  height: 40px;
  font-weight: 600;
  line-height: 36px;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 2px;
  border: 2px solid transparent;
  border-radius: 9999px;

  .out-of-stock & {
    color: $color-error;
    border-color: $color-error;
