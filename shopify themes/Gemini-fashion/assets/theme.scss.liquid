/*=== Rectangle maker ===*/
@mixin rectangle-maker($ratio) {
  position: relative;
  overflow: hidden;

  &:after {
    content: '';
    display: block;
    padding-bottom: ($ratio * 100%);
  }

  .rec-fill {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
}

