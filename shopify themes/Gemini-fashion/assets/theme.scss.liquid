    padding: 0;
    background-color: $color-text-light;
    border-radius: 12px;
    outline: none;
  }
}

/* ------ Arrows ------ */
.slick-arrow {
  $size: $arrow-size;

  @include prefix(transition, all 0.2s ease-out, webkit o spec);

  position: absolute;
  top: 50%;
  width: $size;
  height: $size;
  margin-top: -($size / 2);
  padding: 4px 0 0;
  border: 1px solid transparent;
  text-align: center;
  background-color: transparent;
  outline: none;
  z-index: 10;

  .fa {
    position: relative;
    line-height: 1em;
    vertical-align: top;
    font-size: 24px;
  }

  &:not([class*="arrow-"]) {
    .slick-slider:hover & {
      @include opacity(0.6);
    }

    .slick-slider &:hover {
      @include opacity(0.8);
    }
  }

  /* Single arrow */
  &.arrow-next,
  &.arrow-prev {
    @include opacity(0.5);

    &:hover {
      @include opacity(1);
    }
  }
  &.arrow-next {
    right: -$arrow-size;

    &:hover {
      @include prefix(transform, translate(10px, 0), webkit ms spec);

      @include media-query($large-down) {
        @include prefix(transform, translate(0, 0), webkit ms spec);
      }
    }
  }
  &.arrow-prev {
    left: -$arrow-size;

    &:hover {
      @include prefix(transform, translate(-10px, 0), webkit ms spec);

      @include media-query($large-down) {
        @include prefix(transform, translate(0, 0), webkit ms spec);
      }
    }
  }

  /* Squared arrow */
  &.square-next,
  &.square-prev {
    @include opacity(0.3);

    background-color: #000;
    color: #fff;
    border-width: 0px;

    .fa {
      position: relative;
      top: -3px;
    }
  }
  &.square-next {
    right: 30px;

    @include media-query($small) {
      right: 20px;
    }

    @media only screen and (max-width: 480px) {
      right: 15px;
    }

    .fa {
      left: 2px;
    }
  }
  &.square-prev {
    left: 30px;

    @include media-query($small) {
      left: 20px;
    }

    @media only screen and (max-width: 480px) {
      left: 15px;
    }

    .fa {
      left: -1px;
    }
  }

  /* Circle arrow */
  &.circle-next,
  &.circle-prev {
    @include opacity(0.4);
    @include prefix('border-radius', $arrow-size, webkit moz spec);

    background-color: #000;
    color: #fff;
    border-width: 0px;

    .fa {
      position: relative;
      top: -3px;
    }
  }
  &.circle-next {
    right: 30px;

    .fa {
      left: 1px;
    }
  }
  &.circle-prev {
    left: 30px;

    .fa {
      left: -1px;
    }
  }

  /* Half circle arrow */
  &.half-circle-next,
  &.half-circle-prev {
    @include opacity(0.4);
    @include prefix('border-radius', $arrow-size, webkit moz spec);

    width: 60px;
    height: 60px;
    margin-top: -30px;
    padding-top: 2px;
    background-color: $black;
    border-width: 0px;
    color: $white;

    .fa {
      top: -2px;
    }
  }
  &.half-circle-next {
    right: -30px;

    .fa {
      margin-left: -23px;
    }
  }
  &.half-circle-prev {
    left: -30px;

    .fa {
      margin-right: -23px;
    }
  }
}

