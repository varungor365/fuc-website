<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">

  {% if settings.share_facebook %}
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_facebook' | t }}">
      {% include 'icon-facebook' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_twitter' | t }}">
      {% include 'icon-twitter' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" title="{{ 'general.social.share_on_pinterest' | t }}">
      {% include 'icon-pinterest' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_google %}
    <a target="_blank" href="http://plus.google.com/share?url={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_googleplus' | t }}">
      {% include 'icon-googleplus' %}
    </a>
  {% endif %}

  {% if product.featured_image or article.image  %}
  {% if settings.share_tumblr %}
    <a target="_blank" data-content="http:{% if template contains 'product' %}{{ product | img_url: '1024x1024' }}{% else %}{{ article | img_url: '1024x1024' }}{% endif %}" href="//tumblr.com/widgets/share/tool?canonicalUrl={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_tumblr' | t }}">
      {% include 'icon-tumblr' %}
    </a>
  {% endif %}
  {% endif %}

  {% if settings.share_email %}
    <a target="_blank" href="mailto:?subject=Check this {{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_via_email' | t }}">
      {% include 'icon-email' %}
    </a>
  {% endif %}

</div>
