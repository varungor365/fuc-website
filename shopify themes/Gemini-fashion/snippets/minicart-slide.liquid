<div class="cart-widget js-cart-widget">
  <a class="mini-cart__close" href="javascript:;">
    {% include 'icon-close' %}
  </a>
  <div class="mini-cart mini-cart--slide">
    <div class="shopping-cart">
      <div class="shopping-cart-header">
        <span class="cart-icon">
          {{ 'cart.mini_cart.label' | t }}
          <span>{{ cart.item_count }}</span>
        </span>
      </div> <!--end shopping-cart-header -->

      {% include 'minicart-items' %}

      {%- if cart.item_count > 0 -%}
      <div class="shopping-cart-footer">
        <div class="shopping-cart-total">
          <span class="shopping-cart-total-label">{{ 'cart.general.subtotal' | t }}:</span>
          <span class="shopping-cart-total-value">{{ cart.total_price | money }}</span>
        </div>
        <a href="/cart" class="btn btn--rounded btn--block shopping-cart-checkout">{{ 'cart.general.view_cart' | t }}</a>
        <a href="/checkout" class="btn btn--rounded btn--block btn--outline">{{ 'cart.general.checkout' | t }}</a>
      </div>
      {%- endif -%}

      <div class="shopping-cart__loading">
        <i class="fa fa-spinner"></i>
      </div>
    </div>
  </div>
</div>
