<div class="sub-footer">
  <div class="container">
    {% for block in section.blocks %}
      {% if block.type == 'page' %}
        <div class="four columns">
          {% if block.settings.footer_content_page != blank %}
            <h6 class="title">{{ pages[block.settings.footer_content_page].title }}</h6>
            {{ pages[block.settings.footer_content_page].content }}
          {% endif %}

          {% if block.settings.social_icons_footer %}
            <div class="js-social-icons">
              <ul class="social_icons">
                {% include 'social-icons' %}
              </ul>
            </div>
          {% endif %}
        </div>
      {% elsif block.type == 'text' %}
        <div class="four columns">
          {% if block.settings.title != blank %}
            <h6 class="title">{{ block.settings.title | escape }}</h6>
          {% endif %}

          {% if block.settings.content != blank %}
            {{ block.settings.content }}
          {% endif %}

          {% if block.settings.social_icons_footer %}
            <ul class="social_icons">
              {% include 'social-icons' %}
            </ul>
          {% endif %}
        </div>
      {% elsif block.type == 'link_list' %}
        <div class="four columns">
          <h6 class="title">{{ linklists[block.settings.footer_linklist].title }}</h6>
          <ul class="footer_menu">
            {% for link in linklists[block.settings.footer_linklist].links %}
              <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>

          {% if block.settings.social_icons_footer %}
            <ul class="social_icons">
              {% include 'social-icons' %}
            </ul>
          {% endif %}
        </div>
      {% elsif block.type == 'newsletter_form' %}
        <div class="four columns">
          <h6 class="title">{{ 'general.newsletter_form.title' | t }}</h6>
          <p>{{ 'general.newsletter_form.description' | t }}</p>
          {% include 'newsletter' %}

          {% if block.settings.social_icons_footer %}
            <ul class="social_icons">
              {% include 'social-icons' %}
            </ul>
          {% endif %}
        </div>
      {% else %}
        <div class="four columns">
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<div class="footer">
  <div class="container">
    <div class="sixteen columns">
      <p class="credits">
        &copy; {{ "now" | date: "%Y" }} {{ shop.name | link_to: '/' }}.
        {{ section.settings.copyright_text | escape }}
        {% if section.settings.display_designed_by == true %}
          {{ 'layout.general.designer_credits_html' | t }}
        {% endif %}
        {{ powered_by_link | split: '" ' | join: '?ref=out-of-the-sandbox" ' | split: '">' | join: '?ref=out-of-the-sandbox">' }}
      </p>
      {% if section.settings.display_payment_methods %}
        <div class="payment_methods">
          {% for type in shop.enabled_payment_types %}
            <img src="{{ type | payment_type_img_url }}" alt="{{ type | replace: "_", " " | capitalize }}" />
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "class": "footer-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text"
    },
    {
      "type": "checkbox",
      "id": "display_designed_by",
      "label": "Show theme designer credits",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "display_payment_methods",
      "label": "Show payment method icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "newsletter_form",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
          {
          "type": "checkbox",
          "id": "social_icons_footer",
          "label": "Show social media footer icons",
          "default": false
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "footer_linklist",
          "label": "Menu"
        },
        {
          "type": "checkbox",
          "id": "social_icons_footer",
          "label": "Show social media footer icons",
          "default": false
        }
      ]
    },
    {
      "type": "page",
      "name": "Page",
      "limit": 1,
      "settings": [
        {
          "type": "page",
          "id": "footer_content_page",
          "label": "Content page"
        },
        {
          "type": "checkbox",
          "id": "social_icons_footer",
          "label": "Show social media footer icons",
          "default": true
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "checkbox",
        "id": "social_icons_footer",
        "label": "Show social media footer icons",
        "default": true
        }
      ]
    }
  ]
}
{% endschema %}
