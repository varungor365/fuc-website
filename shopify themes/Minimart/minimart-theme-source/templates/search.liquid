{% assign grid_results = true %}
<div class="search-page">
  {% if search.performed %}
  
    {% if settings.search_results_per_page != blank %}
      {% assign product_per_page = settings.search_results_per_page %}
    {% else %}
      {% assign product_per_page = 15 %}
    {% endif %}
  
    {% paginate search.results by product_per_page %}

      {% if search.results_count == 0 %}
      <header class="page-header">
        <div class="container">
          <h2>{{ 'general.search.no_results_html' | t: terms: search.terms }}</h2>
          {% include 'search-bar' %}
        </div>
      </header>
      {% else %}
      <header class="page-header">
        <div class="container">
          <h2>{{ 'general.search.results_for_html' | t: terms: search.terms }}</h2>
          {% include 'search-bar' %}
        </div>
      </header>

      <div class="container">  
        <div class="block-row">        
          {% if grid_results == false %}
          <div class="product-list">
            {% for item in search.results %}
            {% include 'search-result' %}
            {% endfor %}
          </div>
          {% else %}
          <div class="products-grid row">
            {% for item in search.results %}
            {% include 'search-result-grid' %}
            {% endfor %}
          </div>
          {% endif %}        
        </div>    

        {% if paginate.pages > 1 %}
        <div class="text-center">
          {% include 'pagination-page' %}
        </div>
        {% endif %}
      </div>
      {% endif %}
    {% endpaginate %}
  
  {% else %}  
  <header class="page-header">
    <div class="container">
      <h2 {% if settings.enable_multilang %}data-translate="general.search.title"{% endif %}>
        {{ 'general.search.title' | t }}
      </h2>
      {% include 'search-bar' %}
    </div>
  </header>
  {% endif %}
  
</div>