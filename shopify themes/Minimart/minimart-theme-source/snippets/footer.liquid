<footer class="site-footer" role="contentinfo">
  {% if settings.display_footer_top %}
  <div class="footer-top"> 
    <div class="container">
      <div class="row">
        {% if settings.footer_column_1_title != blank %}
        <div class="col col-xs-6 col-sm-4 col-md-2 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load }}ms">
          <h6>{% include 'multilang' with settings.footer_column_1_title %}</h6>
          <ul>
            {% assign footerCol1 = settings.footer_column_1_content | handleize %}
            {% for link in linklists[footerCol1].links %}
              <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}

        {% if settings.footer_column_2_title != blank %}
        <div class="col col-xs-6 col-sm-4 col-md-2 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load | times: 2 }}ms">
          <h6>{% include 'multilang' with settings.footer_column_2_title %}</h6>
          <ul>
            {% assign footerCol2 = settings.footer_column_2_content | handleize %}
            {% for link in linklists[footerCol2].links %}
              <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        {% if settings.footer_column_3_title != blank %}
        <div class="col col-xs-6 col-sm-4 col-md-2 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load | times: 3 }}ms">
          <h6>{% include 'multilang' with settings.footer_column_3_title %}</h6>
          <ul>
            {% assign footerCol3 = settings.footer_column_3_content | handleize %}
            {% for link in linklists[footerCol3].links %}
              <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        {% if settings.footer_column_4_title != blank %}
        <div class="col col-xs-6 col-sm-4 col-md-2 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load | times: 4 }}ms">
          <h6>{% include 'multilang' with settings.footer_column_4_title %}</h6>
          <ul>
            {% assign footerCol4 = settings.footer_column_4_content | handleize %}
            {% for link in linklists[footerCol4].links %}
              <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        <div class="col col-xs-12 col-sm-8 col-md-4 wow fadeInUp last" data-wow-delay="{{ settings.time_lazy_load | times: 5 }}ms">
          {% include 'footer-newsletter' %}
          
          {% if settings.display_social %}
            <h6>{% include 'multilang' with settings.footer_social_title %}</h6>
            {% include 'social' %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  
  {% if settings.display_footer_middle %}
  <div class="footer-middle text-center wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load }}ms">
    <div class="container">
      {% if settings.footer_middle_text != blank %}
        <div class="content">
          {% if settings.enable_multilang %}
          <div class="lang1">{{ settings.footer_middle_text | split: '[lang2]' | first }}</div>
          <div class="lang2">{{ settings.footer_middle_text | split: '[lang2]' | last }}</div>
          {% else %}
          {{ settings.footer_middle_text | split: '|' | first }}
          {% endif %}
        </div>
      {% endif %}
      {% if settings.footer_middle_live_chat != blank %}
        <a href="{{ settings.footer_middle_live_chat_link }}" class="live-chat">
          {% include 'multilang' with settings.footer_middle_live_chat %}
        </a>
      {% endif %}
    </div>
  </div>
  {% endif %}

  {% if settings.display_footer_bottom %}
  <div class="footer-bottom">
    <div class="container">
      {% if settings.display_footer_address and settings.footer_address_code != blank %}
      <address>
        <div class="row">
          <div class="col-xs-12 col-sm-6 wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load }}ms">
            {% if settings.enable_multilang %}
            <div class="lang1">{{ settings.footer_address_code | split: '[lang2]' | first }}</div>
            <div class="lang2">{{ settings.footer_address_code | split: '[lang2]' | last }}</div>
            {% else %}
            {{ settings.footer_address_code | split: '|' | first }}
            {% endif %}
          </div>
          <div class="col-xs-12 col-sm-6 text-right wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load | times: 2 }}ms">
            {% if settings.enable_multilang %}
            <div class="lang1">{{ settings.footer_address_code_right | split: '[lang2]' | first }}</div>
            <div class="lang2">{{ settings.footer_address_code_right | split: '[lang2]' | last }}</div>
            {% else %}
            {{ settings.footer_address_code_right | split: '|' | first }}
            {% endif %}
          </div>
        </div>
      </address>        
      {% endif %}

      {% include 'payment_methods' %}
    </div>          
  </div>
  {% endif %}
</footer>
{% include 'message-modal' %}