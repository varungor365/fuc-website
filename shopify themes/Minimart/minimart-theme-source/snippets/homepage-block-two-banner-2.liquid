{% if settings.display_two_block_banner_02 %}
<div class="two-banner-home text-center container">
  <ul class="row">
    {% for i in (1..2) %}
    {% capture two_banner_home %}two_banner_home_{{ i }}.png{% endcapture %}
    {% capture two_banner_home_link %}two_banner_home_link_{{ i }}{% endcapture %}
    
    {% assign repeat = forloop.index | minus: 1 %}
    {% assign delayTime = settings.time_lazy_load | times : repeat %}
    <li class="col-xs-12 col-sm-6 wow fadeInUp" data-wow-delay="{{ delayTime }}ms">
      <a href="{{ settings[two_banner_home_link] }}">
        <img src="{{ two_banner_home | asset_url }}" alt="" />
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endif %}