{% include 'block-width' %}

{% if section.blocks.size > 0 %}
  <div id="section-{{ section.id }}" class="{% if section.settings.background_section %}bg-section {% endif %} "data-section-id="{{ section.id }}" data-section-type="guarantee-template">
    <div class="box">
      <div class="wrapper">
        <div class="grid grid--spacer {{ section.settings.text_align }}">
          
          <!-- Blocks -->
          {% for block in section.blocks %}
            <div class="grid__item {{ column_width }}" {{ block.shopify_attributes }}>
              <p><span class="fas fa-{{ block.settings.icon }} {{ section.settings.icon_size }}"></span></p>
              <h3>{{ block.settings.title }}</h3>
              <div class="rte">{{ block.settings.text }}</div>
              {% unless block.settings.button_label == blank %}
                <p><a href="{{ block.settings.button_link }}" class="btn {{ block.settings.button_style }} btn--small">
                  {{ block.settings.button_label | escape }}
                </a></p>
              {% endunless %}
            </div>
          {% endfor %}
          
          {% if section.blocks.size == 0 %}
            {% include 'no-blocks' %}
          {% endif %}
        
        </div>
      </div>
    </div>
  </div>
{% endif %}


{% schema %}
  {
    "name": "Guarantee",
    "class": "guarantee-section",
    "max_blocks": 4,
    "settings": [
      {
        "type": "checkbox",
        "id": "background_section",
        "label": "Add background"
      },
	  {
        "type": "select",
        "id": "text_align",
        "label": "Text align",
        "default": "",
        "options": [
          {
            "value": "",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          }
        ]
      },
	  {
        "type": "select",
        "id": "icon_size",
        "label": "Icon size",
        "default": "fa-2x",
        "options": [
          {
            "value": "fa-2x",
            "label": "Small"
          },
          {
            "value": "fa-3x",
            "label": "Medium"
          },
		  {
            "value": "fa-4x",
            "label": "Large"
          }
        ]
      }
	],
	"blocks" : [
	  {
        "type": "text",
        "name": "Guarantee",
        "settings": [
		  {
            "type": "text",
            "id": "icon",
            "label":"Icon",
			"info": "Enter the name of any free solid icons on [FontAwesome](https://fontawesome.com/icons?d=gallery&s=solid&m=free)",
            "default": "trophy"
          },
          {
            "type": "text",
            "id": "title",
            "label":"Heading",
            "default": "Our Guarantee"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default":"<p>Share your guarantees with your customers.</p>"
          },
		  {
            "type": "select",
            "id": "button_style",
            "label": "Button style",
            "default": "btn--primary",
            "options": [
              {
                "value": "",
                "label": "Default"
              },
              {
                "value": "btn--primary",
                "label": "Full"
              },
              {
                "value": "btn-outline-primary",
                "label": "Outline"
              }
            ]
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ]
  }
{% endschema %}