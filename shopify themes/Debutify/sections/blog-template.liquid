{%- assign limit = section.settings.grid | times: section.settings.rows -%}

{% paginate blog.articles by limit %}
  <div id="BlogSection" data-section-id="{{ section.id }}" data-section-type="blog-template">
    <header class="section-header">
      <h1 class="page-title">
        {% if current_tags %}
          {{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}
        {% else %}
          {{ blog.title }}
        {% endif %}
          <a href="{{ shop.url }}{{ blog.url }}.atom" class="icon-fallback-text rss-link">
            <span class="fas fa-rss" aria-hidden="true"></span>
            <span class="fallback-text">RSS</span>
          </a>
      </h1>
    </header>
    
    <div class="grid grid-uniform grid--spacer">
      {% include 'article-width' %}
      
      {% for article in blog.articles %}
        {% include 'article-grid-item' %}
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}
  </div>
{% endpaginate %}


{% schema %}
  {
    "name": "Blog pages",
    "class": "blog-section",
    "settings": [
	  {
		"type": "header",
		"content": "Grid"
	  },
	  {
        "type": "select",
        "id": "rows",
        "label": "Number of rows",
		"default": "2",
		"options": [
          {
            "value": "1",
            "label": "1"
          },
		  {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "6",
            "label": "6"
          }
		]
      },
	  {
        "type": "select",
        "id": "grid",
        "label": "Articles per row",
		"default": "1",
		"options": [
          {
            "value": "1",
            "label": "1"
          },
		  {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          }
		]
      },
      {
		"type": "header",
		"content": "Articles"
	  },
	  {
        "type": "checkbox",
        "id": "show_image",
        "label": "Show cover image",
        "default": true
      },
	  {
		"type": "checkbox",
		"id": "show_tags",
		"label": "Show tags",
		"default": true
	  },
	  {
        "type": "range",
        "id": "word_count",
        "label": "Word count",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 60
      }
    ]
  }
{% endschema %}