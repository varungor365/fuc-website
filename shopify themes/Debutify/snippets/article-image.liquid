{% if settings.section_height != 'none' and article.image %}

  {% include 'hero-header' %}

  <div class="hero-container">
    <div class="hero {% if hero_header %}hero-header {% endif %} hero--{{ settings.section_height }} overlay lazyload js"
      data-bgset="{% include 'bgset', image: article.image %}"
      data-sizes="auto"
      data-parent-fit="cover"
      style="background-position: center center; background-image: url('{{ article.image | img_url: '300x300' }});"
      >

      <div class="hero__inner">
        <div class="hero__text-wrapper text-center">

          <div class="grid">
            <div class="grid__item large--eight-twelfths push--large--two-twelfths one-whole hero-content">
              <h2 class="hero__title">{{ article.title | escape }}</h2>
              {% include 'blog-meta' %}
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

{% endif %}