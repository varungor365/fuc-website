                        <div class="gl_column-inner ">
                           <div class="spb_wrapper">
                              <div class=" basel-info-box text-center icon-alignment-top box-style-base color-scheme-dark  with-animation gl_custom_1484895441326_94_04" {{ style_block_text }}>
                                 {%- if section.settings.image != blank -%}
                                 <div class="box-icon-wrapper">
                                    <div class="info-box-icon">
                                       {%- assign image = section.settings.image -%}
                                       {%- assign image_size = image.width | append:'x' -%}
                                       <img width="72" height="41" src="{%-include 'gl_image_format',src: image , size: image_size -%}" class="info-icon image-1 attachment-full" alt="">                                          
                                    </div>
                                 </div>
                                 {%- endif -%}
