                                    </div>
                                 </div>
                              </div>
                              {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
                              <div class="basel-button-wrapper text-left">
                                 <a href="{{ section.settings.button_link }}" class="btn btn-color-{{ section.settings.button_color }} btn-style-{{ section.settings.button_style }} btn-size-{{ section.settings.button_size }}">{{ section.settings.button_label }}</a>
                              </div>
                              {%- endif -%}
                           </div>
                        </div>
                     </div>
                  </div>
                  {%- endif -%}
               {%- endif -%}
            </div>
            {%- if section.settings.lat != blank and section.settings.lon != blank -%}
            {%- if admin_shopify -%}
               <script type="text/javascript">
                  function glMaplace() {
                     new Maplace({
                        locations: [
                            {
                              lat: {{ section.settings.lat }},
                              lon: {{ section.settings.lon }},
                              title: '',
                              animation: google.maps.Animation.DROP
                            }
                        ],
                        controls_on_map: false,
                        title: '',
                       map_div: '.google-map-{{section.id}}',
                       start: 1,
                       map_options: {
                        zoom: 15,
                        scrollwheel: false                   
                        }
                        {%- if section.settings.style_json != blank -%},
                       styles: {
                             'Custom style': {{ section.settings.style_json }}}
                        {%- endif %}
                     }).Load();
                  }
                  jQuery(document).ready(function() {
                     glMaplace();
               });
                  $(document)
                     .on('shopify:section:load', glMaplace)
                    .on('shopify:section:unload', glMaplace)
                    .on('shopify:section:select',glMaplace)
                    .on('shopify:section:deselect', glMaplace)
                    .on('shopify:block:select',glMaplace)
                    .on('shopify:block:deselect', glMaplace);
               </script>
            {%- else -%}
               <script type="text/javascript">
                  jQuery(document).ready(function() {
                     new Maplace({
                        locations: [
                            {
                              lat: {{ section.settings.lat }},
                              lon: {{ section.settings.lon }},
                              title: '',
                              animation: google.maps.Animation.DROP
                            }
                        ],
                        controls_on_map: false,
                        title: '',
                       map_div: '.google-map-{{section.id}}',
                       start: 1,
                       map_options: {
                        zoom: 15,
                        scrollwheel: false                   
                        }
                        {%- if section.settings.style_json != blank -%},
                       styles: {
                             'Custom style': {{ section.settings.style_json }}}
                        {%- endif %}
                     }).Load();
               });
               </script>
            {%- endif -%}
            {%- endif -%}
         </div>
      </div>
   </div>
</div>
