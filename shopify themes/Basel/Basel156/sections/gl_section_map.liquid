  {%- else -%}
  {%- assign class_has_fill = '' -%}
  {%- endif -%}
{%- endcapture -%}
{%- unless image_size != blank -%}
  {%- assign image_size = '2048x' -%}
{%- endunless -%}
{%- capture check_admin -%}{{ content_for_header  }}{%- endcapture -%}
{%- capture style_block_text -%}
   {%- if section.settings.section_information_color != blank or section.settings.section_information_image != blank -%}
   style="{%- if section.settings.section_information_color != blank -%}background-color: {{ section.settings.section_information_color }} !important;{%- endif -%}{%- if section.settings.section_information_image != blank -%} background-image: url({%-include 'gl_image_format',src: section.settings.section_information_image , size: '2048x' -%}) !important{%- endif -%}"
   {%- endif -%}
{%- endcapture -%}
{%- if check_admin contains 'design_mode' -%}{%- assign admin_shopify = true -%}{%- endif -%}
{{ style_block_section }}
<div {{ data_section }}{%- if section.settings.use_video and section.settings.video_url != blank %} data-gl-video-bg="{{ section.settings.video_url }}"{%- endif %} class="gl_custom_{{section.id}} {% if section.settings.row_stretch == 'stretch_row_content_no_spaces' %}gl_row-no-padding{%- endif %}{%- if section.settings.use_parallax %} basel-parallax{%- endif %} gl_row spb_row gl_row-fluid {{class_has_fill}} gl_row-flex{%- if section.settings.use_video and section.settings.video_url != blank %} opacity-video-bg gl_video-bg-container gl_has_youtube{%- endif %}{%- if section.settings.full_height %} gl_row-o-full-height gl_row-o-columns-{{section.settings.columns_position}}{%- endif %} gl_row-o-content-middle">
   <div class="gl_has_google_map spb_column gl_column_container gl_col-sm-12">
      <div class="gl_column-inner gl_pt_0">
         <div class="spb_wrapper">
            <div class="google-map-container google-map-container-with-content">
               <div class="basel-google-map-wrapper">
                  <div class="basel-google-map with-content google-map-{{ section.id }}" style="height:{{section.settings.height}}px;"></div>
               </div>
               {%- if section.settings.title != blank or section.settings.richtext != blank -%}
                  {%- if section.settings.style == '1' -%}
                  <div class="gl_row spb_row gl_inner gl_row-fluid gl_custom_map gl_row-o-content-middle gl_row-flex">
