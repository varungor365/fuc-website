   {%- endif -%}
   <div class="spb_column gl_column_container gl_col-sm-{{section.settings.width}} gl_col-has-fill color-scheme-{{ section.settings.text_color }}">
      <div class="gl_column-inner gl_custom_testimonials">
         <div class="spb_wrapper">
            {%- if section.settings.title != blank -%}
            <div class="title-wrapper basel-title-color-black basel-title-style-{{ section.settings.title_style }} basel-title-size-{{ section.settings.title_size }} text-center ">
               <div class="liner-continer"> <span class="left-line"></span> <span class="title">{{ section.settings.title }}<span class="title-separator"><span></span></span></span> <span class="right-line"></span> </div>
            </div>
            {%- endif -%}
            <div class="testimonials-wrapper">
               {%- if section.blocks.size > 0 -%}
                  {% comment %}{%- if section.settings.title != blank and section.settings.title_style == 'silder_title' -%}<h2 class="title slider-title">{{section.settings.title}}</h2>{%- endif -%}{% endcomment %}
                  <div class="testimonials testimonials-{{section.settings.layout}} testimon-style-{{section.settings.style}} testimon-columns-{{section.settings.columns}} testimon-align-{{section.settings.align}} {%- if section.settings.layout =='slider' %}ins-owl-carousel owl-carousel{%- endif -%}" data-autoheight='true' data-time='{{ section.settings.silder_speed | plus: 0 }}' data-nav='{%- if section.settings.hide_button -%}false{%- else -%}true{%- endif -%}' data-items='{{ number }}' data-dots='{%- if section.settings.hide_pagination -%}false{%- else -%}true{%- endif -%}' data-autoplay='{%- if section.settings.autoplay -%}true{%- else -%}false{%- endif -%}' data-loop='{%- if section.settings.slider_loop -%}true{%- else -%}false{%- endif -%}' data-medium='1' data-small='1' data-exsmall='1'>
                     {%- for block in section.blocks -%}
                     <div class="testimonial" {{ block.shopify_attributes }}>
                        <div class="testimonial-inner">
                           <div class="testimonial-avatar">
                              {%- if block.settings.avatar != blank -%}
                              {%- assign image = block.settings.avatar -%}
                                 <img class="testimonial-avatar-image" src="{%-include 'gl_image_format',src: image , size: image_size -%}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt }}" title="{{ image.alt }}">                 
                              {%- else -%}
                                 <img class="testimonial-avatar-image" src="//cdn.shopify.com/s/files/1/1933/6253/files/testimonials-placeholder.jpg?14557201033594249559" width="100" height="100" alt="client1" title="client1">
                              {%- endif -%}
                           </div>
                           <div class="testimonial-content">
                              {%- if block.settings.quote != blank -%}{{ block.settings.quote | strip_html }}{%- endif -%}         
                              {%- if block.settings.author != blank -%}
                              <footer>
                                 {{ block.settings.author }}{%- if block.settings.user_title != blank -%}<span>{{block.settings.user_title}}</span>{%- endif -%}
                              </footer>
                              {%- endif -%}
                           </div>
                        </div>
                     </div>
                     {%- endfor -%}
                  </div>
               {%- endif -%}
               {%- if section.blocks.size == 0 -%}
                {%- include 'no-blocks' -%}
               {%- endif -%}
            </div>
         </div>
      </div>
   </div>
  {%- if class_phu != '12' -%}
   <div class="spb_column gl_column_container gl_col-sm-{{class_phu}}"><div class="gl_column-inner"><div class="spb_wrapper"></div></div></div>
   {%- endif -%}
