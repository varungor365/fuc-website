                     {%- cycle '','','<div class="clearfix clearfix visible-sm-block"></div>' -%}
                     {%- case section.settings.grid_columns -%}
                         {%- when '2' -%}
                           {%- cycle '','<div class="clearfix visible-md-block visible-lg-block"></div>' -%}
                         {%- when '3' -%}
                           {%- cycle '','','<div class="clearfix visible-md-block visible-lg-block"></div>' -%}
                         {%- when '4' -%}
                           {%- cycle '','','','<div class="clearfix visible-md-block visible-lg-block"></div>' -%}
                        {%- when '6' -%}
                           {%- cycle '','','','','','<div class="clearfix visible-md-block visible-lg-block"></div>' -%}
                     {%- endcase -%}
