                         </div>
                      </header>
                      <!-- .entry-header -->
                      <div class="entry-content">
                         <p>{{ 'homepage.onboarding.blog_excerpt' | t }}</p>
                         <p class="read-more-section"><a class="btn btn-style-link btn-read-more more-link" href="/admin/blogs" target="_blank">Read more</a></p>
                      </div>
                      <!-- .entry-content -->
                   </article>
                   {%- endfor -%}
               {%- endfor -%}
             {%- endif -%}
             </div>
             {%- if paginate.pages > 1 -%}
             <div class="blog-footer">
                 {%- if use_pagination -%}
                   <div class="basel-pagination blog_gl_pagination">
                      {%- include 'pagination',blog_ajax:true -%}
                  </div>
