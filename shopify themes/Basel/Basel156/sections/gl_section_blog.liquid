                            <span class="post-date-day">{{ 'now' | date: "%d" }}</span>
                            <span class="post-date-month">{{ 'now' | date: "%B" }}</span>
                         </div>
                         <div class="post-mask">
                            <div class="meta-post-categories"><a href="/admin/blogs" rel="category tag" target="_blank">Lifestyle</a>, <a href="/admin/blogs" rel="category tag" target="_blank">Uncategorized</a></div>
                            <h3 class="entry-title">
                               <a href="/admin/blogs" rel="bookmark" target="_blank">{{ 'homepage.onboarding.blog_title' | t }}</a>
                            </h3>
                            <div class="entry-meta">
                               <ul class="entry-meta-list">
