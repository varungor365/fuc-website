                   <a href="/blogs/{{ blog.handle }}{{ paginate.next.url }}&q=paginate_{{paginate_index}}+pagination_{{use_pagination}}+more_{{use_more_btn}}+style_{{section.settings.style}}+columns_{{section.settings.columns}}+title_{{enable_title}}+meta_{{enable_meta}}+text_{{enable_text}}+read_{{enable_button}}+date_{{enable_post_date}}+glrow_{{section.settings.row_stretch}}+categories_{{enable_post_categories}}&view=ajax" class="btn basel-blog-load-more">{{ 'blogs.section.load_more' | t }}</a>
                 {%- endif -%}
             </div>
             {%- endif -%}
        </div>
      </div>
    </div>
  </div>
