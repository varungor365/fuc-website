                          <input type="submit" class="btn" name="subscribe" id="subscribe" value="{{ settings.newslatter_btn_text }}">
                        </span>
                      </div>
                           
                    {% endif %}
                  {% endform %}
                {% endcomment %}
               
               
               
                {% endif %}
              {% endif %}
              </div><!-- /.etp-form-wrap -->
              <div class="etp-ftr-des-wrap">
                <p class="etp-ftr-des">By clicking the button, you’ll.</p>
