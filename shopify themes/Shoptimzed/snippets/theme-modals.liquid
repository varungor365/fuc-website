                      <span class="input-group-btn">
                        <input type="submit" class="btn" name="subscribe" id="subscribe" value="{{ settings.newslatter_btn_text }}">
                      </span>
                    </div>
                  </form>
                {% else %}       
                
<!--                 <label for="email">Email</label><br/> -->
