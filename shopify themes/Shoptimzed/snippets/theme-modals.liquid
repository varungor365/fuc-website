                        <span class="etp-input-icon">
                          <img src="{{ 'form-user-icon.png' | asset_url }}" alt="icon">
                        </span>
                          </div>
                          <div class="etp-input-wrap etp-eamil-name">
                            <input name="customer[first_name]" id="fname" class="input-group__field newsletter__input" value="" placeholder="Name" autocorrect="off" autocapitalize="off" type="text">
                            <span class="etp-input-icon">
                              <img src="{{ 'form-mail-icon.png' | asset_url }}" alt="icon">
                            </span>
                          </div>
                          <div class="etp-form-btn-wrap">
                                    <div class="etp-form-btn">  
