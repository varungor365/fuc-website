                </div>
                <input type="hidden" name="list" value="PiHBh1gDR6hGyYb5HjPa892Q"/>
                 
                 
                <div class="etp-form-btn-wrap">
                  <div class="etp-form-btn">  
                    <input type="submit" class="btn"  name="submit" id="submit" value="{{ settings.newslatter_btn_text }}">
                    <span class="etp-form-btn-errow">
                      <img src="{{ 'entry-btn-erow.png' | asset_url }}" alt="Button icon">
                    </span>
                  </div>
                </div>
<!--                 <input type="submit" name="submit" id="submit"/> -->
                </form>
                {% comment %} 
                  {% form 'customer' %}
                    {{ form.errors | default_errors }}
                    {% if form.posted_successfully? %}
                      <p class="note form-success">{{ 'general.newsletter_form.confirmation' | t }}</p>
                    {% else %}
                      <div class="etp-input-wrap etp-eamil-field">
                        <input required type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" id="Email" class="input-group-field" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
