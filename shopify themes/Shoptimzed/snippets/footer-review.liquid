<hr>
<div class="footer--review">
  <div class="wrapper">
    {% if settings.footer_review_title != "" %}
      <h2 class="title">{{ settings.footer_review_title }}</h2>
    {% endif %}
    <ul class="review--ul">
      <li>
        <img alt="Image of {{ settings.footer_review_1_user_text }}" src="{{ "footer_review_1.png" | asset_url }}" title="{{ settings.footer_review_1_user_text }}">
        <p class="review-text">
          <span class="qoute">&ldquo;</span>{{ settings.footer_review_1_text }} <span class="qoute">&rdquo;</span>
          <span class="review-name">- {{ settings.footer_review_1_user_text }}</span>
        </p>
      </li>
      <li>
        <img alt="Image of {{ settings.footer_review_2_user_text }}" src="{{ "footer_review_2.png" | asset_url }}" title="{{ settings.footer_review_2_user_text }}">
        <p class="review-text">
          <span class="qoute">&ldquo;</span>{{ settings.footer_review_2_text }} <span class="qoute">&rdquo;</span>
          <span class="review-name">- {{ settings.footer_review_2_user_text }}</span>
        </p>
      </li>
      <li>
        <img alt="Image of {{ settings.footer_review_3_user_text }}" src="{{ "footer_review_3.png" | asset_url  }}" title="{{ settings.footer_review_3_user_text }}">
        <p class="review-text">
          <span class="qoute">&ldquo;</span>{{ settings.footer_review_3_text }} <span class="qoute">&rdquo;</span>
          <span class="review-name">- {{ settings.footer_review_3_user_text }}</span>
        </p>
      </li>
    </ul>
  </div>
</div>