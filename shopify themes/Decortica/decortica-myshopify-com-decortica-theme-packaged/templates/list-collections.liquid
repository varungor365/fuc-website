{% comment %}
  This page represents the /collections and /products pages.
  It is an optional, but highly recommended, template for your theme.

  More info:
    - http://docs.shopify.com/manual/configuration/store-customization/taking-control-of-collections-listing
{% endcomment %}

{% include 'breadcrumb' %}

<div class="row">
  {% if settings.display_sidebar_list_cat_page %}
  {% include 'collection-sidebar' %}
  {% endif %}
  <div class="block-row col-xs-9 col-main">
    
    <header class="page-header">
      <h2 {% if settings.enable_multilang %}data-translate="collections.general.title"{%endif%}>{{ 'collections.general.title' | t }}</h2>
      <div class="rte">
        {% include 'multilang' with settings.collections_page_des %}
      </div>
    </header>

    <div class="list-category row">
      {% comment %}
      Loop through each collection, except 'frontpage'
      {% endcomment %}

      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' %}
          {% include 'collection-grid-item' %}
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</div>