{% capture menu_featured_product_title %}menu_featured_product_title-{{ indexOf }}{% endcapture %}
{% capture menu_featured_product_collection %}menu_featured_product_collection-{{ indexOf }}{% endcapture %}

<div class="widget-featured-product">
  {% if settings[menu_featured_product_title] != blank %}
  <div class="widget-title">   
    <h3>
      {% include 'multilang' with settings[menu_featured_product_title] %}
    </h3>
  </div>
  {% endif %}

  {% assign t = settings[menu_featured_product_collection] %}

  {% if settings[menu_featured_product_collection] == blank %}
  <p style="margin-bottom: 30px;">Please select a collection in Theme Setting to display the products (Navigation -> Featured Product in Mega Menu)</p>
  {% else %}
  <div class="widget-product">
    <div class="products-grid">
      {% comment %}
      Loop through products in your Frontpage collection.
      This collection is created by default, but you must add products to it.
      {% endcomment %}
      {% capture index %}{{ 'now' | date: '%S' | times: collections[t].products.size | divided_by: 60 }}{% endcapture %}
      
      {% for product in collections[t].products offset:index limit:1 %}
      {% include 'product-grid-item' %}
      {% endfor %}
      
    </div> 
  </div>
  {% endif %}
</div>