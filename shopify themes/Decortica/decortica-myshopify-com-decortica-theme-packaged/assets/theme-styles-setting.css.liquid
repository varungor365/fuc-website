.view-product-detail { font: {{ settings.general_font_h5 }}; }

h6,
.sale-off,
.price-box em,
.free_shipping a,
.widget-tags li a,
.user-tags { font: {{ settings.general_font_h6 }}; }

a,
.page-header h2, .page-header h1,
.blog-detail .user-tags li  { color:{{ settings.page_title_color }}; }

.breadcrumb { border-bottom-color:{{ settings.breadcrumb_border_color}}; }
.breadcrumb a, 
.breadcrumb span {color:{{ settings.breadcrumb_color}};  text-transform:{{ settings.breadcrumb_text_transform }}; }
.breadcrumb span.arrow { border-left-color:{{ settings.breadcrumb_color}}; }

/*  Background
/*-------------------------- */
.site-header.on,
body {
  {% if settings.bg_body_color != '' %}
    background: {{ settings.bg_body_color }};
  {% endif %}
  {% if settings.bg_body_img == 'bg-body.png' %}
	background: url({{'bg-body.png' | asset_url }});
  {% elsif settings.bg_body_img != 'none' %}
  	background: url({{ settings.bg_body_img | asset_url }});
  {% endif %}
  background-position: {{ settings.bg_body_position_x }} {{ settings.bg_body_position_y }};
  background-repeat: {{ settings.bg_body_repeat }};
  background-attachment: {{ settings.bg_body_attachment }};
}

/*  Header
/*-------------------------- */
.header-top { background: {{ settings.bg_header_top_color }}; color: {{ settings.text_header_top_color }}; }
.header-top a.link { color: {{ settings.text_header_top_color }}; border-bottom: 1px solid {{ settings.text_header_top_color }}; }

.header-bottom { background: {{ settings.bg_header_bottom_color }}; }

.free_shipping,
.free_shipping a { color: {{ settings.header_free_shipping_text_color }}; }
.free_shipping a:hover span { border-bottom: 1px solid {{ settings.header_free_shipping_text_color }};}

.header-panel-top,
.header-panel-top a,
.header-bottom .top-cart a span.first { color: {{ settings.header_link_color }}; }
.header-bottom .selectize-control.single .selectize-input:after { border-top-color: {{ settings.header_link_color }}; }

.search-bar input.input-group-field { background: {{ settings.bg_search_color }}; border-color: {{ settings.border_search_color }}; }

.header-bottom .top-cart a #cartCount { background: {{ settings.bg_cart_color }}; }

.header-bottom.on .top-cart a #cartCount { background: {{ settings.bg_cart_color_fixed_top }}; }

.header-bottom.on .top-cart a span.first,
.site-nav > li + li > a,
.header-bottom .nav-search .icon-search,
.header-bottom.on .top-cart a span.first { border-color: {{ settings.border_color_fixed_top }}!important; }

/*  Footer
/*-------------------------- */
.site-footer {
  background: {{ settings.footer_bg_color }};
  
  {% if settings.enable_footer_bg_image == true %}
    background: transparent url({{'bg-footer.png' | asset_url }});
  	background-position: {{ settings.footer_bg_position_x }} {{ settings.footer_bg_position_y }};
    background-repeat: {{ settings.footer_bg_repeat }};
    background-attachment: {{ settings.footer_bg_attachment }};
  {% endif %}
}

.footer-middle h3 { color: {{ settings.footer_title_color }}; }
.footer-middle h3 > span { border-color: {{ settings.footer_line_color }}; }
.site-footer,
.site-footer a { color: {{ settings.footer_link_color }}; }
.site-footer a:hover { color: {{ settings.footer_title_color }}; }
.site-footer .col-1 a:hover,
.site-footer .col-2 a:hover,
.site-footer .col-3 a:hover { border-bottom: 1px solid {{ settings.footer_title_color }}; }

.footer-top { background: {{ settings.footer_top_bg }}; color: {{ settings.footer_top_color }}; }
.footer-top a { color: {{ settings.footer_top_color }}; }

.footer-bottom { border-color: {{ settings.footer_line_color }}; }

/*  Navigation
/*-------------------------- */
.nav-bar { background-color: {{ settings.nav_bg_color }}; }
.site-nav { text-align: {{ settings.nav_alignment }}; }
.site-nav > li > a,
.site-nav-dropdown .col-1 .inner > a,
.site-nav .widget-featured-product .widget-title h3 { color: {{ settings.nav_link_top_color }}; }
.site-nav > li:hover > a ,
.site-nav > li:hover > a:hover {color: {{ settings.nav_link_top_hover_color }};}
.site-nav li.dropdown .icon-dropdown { border-top-color: {{ settings.nav_link_top_color }}; }

.site-nav > li:hover > a > span:first-child,
.site-nav > li:hover > a.current > span:first-child,
.site-nav > li > a.current > span:first-child { border-color: {{ settings.nav_link_top_hover_border_color }}; }

{% if settings.enable_new %}
.wrapper-container .site-nav li.dropdown.mega-menu > a { position: relative; }
.wrapper-container .site-nav li.dropdown.mega-menu > a:after { content: "New"; position: absolute; top: -24px; right: -13px; background: #e95144; color: #fff; font-size: 10px; font-style: italic; text-transform: uppercase; line-height: 17px; height: 17px; width: 33px; text-align: center; }
.wrapper-container .site-nav li.dropdown.mega-menu > a:before { content: ""; border: 4px solid transparent; border-top-color: #e95144; position: absolute; right: -1px; top: -7px; }
{% endif %}

/* dropdown menu */
.site-nav-dropdown {border-style: {{ settings.nav_dropdown_border_style }}; border-color: {{ settings.nav_dropdown_border_color }}; background: {{ settings.nav_dropdown_bg_color}}; }
.site-nav-dropdown li a { color: {{ settings.nav_dropdown_link_color }}; }
.site-nav-dropdown li:hover > a { color: {{ settings.nav_dropdown_link_color_hover }}; }
.site-nav-dropdown li:hover > a:before { border-left-color: {{ settings.nav_dropdown_link_color_hover }}; }
.site-nav-dropdown li.dropdown .icon-dropdown { border-top-color: {{ settings.nav_dropdown_link_color }}; }
.site-nav .widget-featured-product .btn { color: {{ settings.nav_link_top_color }}; }

/* Block Instagram */
.home-instagram { background-color: {{ settings.instagram_bg_color }}; }

/* Product Name */
.product-title { text-transform: {{ settings.product_name_text_transform }}; }

/* Border product item */
.products-grid .grid-item-border .product-image,
.grid-item-border.product-img-box .product-photo-container { border-color: {{ settings.product_image_border_color}};}

/*  Button
/*-------------------------- */

.btn {
  letter-spacing: 0.05em;
  text-transform: uppercase;
  border: 2px solid transparent;
  background: transparent;
  color: #000;
}
{% for i in (1..5) %}
  {% capture btn_border_color %}btn_border_color-{{ i }}{% endcapture %}
  {% capture btn_bg_color %}btn_bg_color-{{ i }}{% endcapture %}
  {% capture btn_text_color %}btn_text_color-{{ i }}{% endcapture %}

  {% capture btn_hover_border_color %}btn_hover_border_color-{{ i }}{% endcapture %}
  {% capture btn_hover_bg_color %}btn_hover_bg_color-{{ i }}{% endcapture %}
  {% capture btn_hover_text_color %}btn_hover_text_color-{{ i }}{% endcapture %}
.btn-{{ i }},
a.btn-{{ i }},
button.btn-{{ i }} {
  border-color: {{ settings[btn_border_color] }};
  background: {{ settings[btn_bg_color] }};
  color: {{ settings[btn_text_color] }};
}

.btn-{{ i }}:hover,
a.btn-{{ i }}:hover,
button.btn-{{ i }}:hover {
  border-color: {{ settings[btn_hover_border_color] }};
  background: {{ settings[btn_hover_bg_color] }};
  color: {{ settings[btn_hover_text_color] }};
}
{% endfor %}

