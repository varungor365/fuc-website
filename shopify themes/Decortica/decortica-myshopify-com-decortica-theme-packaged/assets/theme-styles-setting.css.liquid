/* Home SlideShow */
.slide-heading { font-size: {{ settings.slideshow_heading_size }}px; line-height: {{ settings.slideshow_heading_size }}px; color: {{ settings.slideshow_heading_color }}; }
.slide-text { font-size: {{ settings.slideshow_description_size }}px; color: {{ settings.slideshow_description_color }}; font-weight: 400; }

.sidebar-links .panel-title > a { color: {{ settings.sidebar_accordion_link_color }}; }

{% if settings.use_color_swatch %}
