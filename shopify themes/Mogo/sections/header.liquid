{%- case section.settings.type -%}
  {%- when '1' -%}
    {%- assign res-class = 'tt-header--build-01 tt-header--style-01' -%}
    {%- capture res-build -%}{%- include 'header-get-build-1' -%}{%- endcapture -%}
  {%- when '2' -%}
    {%- assign res-class = 'tt-header--build-02 tt-header--style-02' -%}
    {%- capture res-build -%}{%- include 'header-get-build-2' -%}{%- endcapture -%}
  {%- when '3' -%}
    {%- assign res-class = 'tt-header--build-01 tt-header--style-03' -%}
    {%- capture res-build -%}{%- include 'header-get-build-1' -%}{%- endcapture -%}
  {%- when '4' -%}
    {%- assign res-class = 'tt-header--build-02 tt-header--style-04' -%}
    {%- capture res-build -%}{%- include 'header-get-build-2' -%}{%- endcapture -%}
  {%- when '5' -%}
    {%- assign res-class = 'tt-header--build-03 tt-header--style-05' -%}
    {%- capture res-build -%}{%- include 'header-get-build-2' -%}{%- endcapture -%}
  {%- when '6' -%}
    {%- assign res-class = 'tt-header--build-04 tt-header--style-06' -%}
    {%- capture res-build -%}{%- include 'header-get-build-1' -%}{%- endcapture -%}
{%- endcase -%}
{%- if settings.color_header_transparent == true and template == 'index' -%}
  {%- assign res-class = res-class | append: ' tt-header--transparent' -%}
{%- endif -%}
<div data-section-id="{{ section.id }}" data-section-type="header">
  <div class="tt-header {{ res-class }}" data-sticky="{{ section.settings.sticky }}">
    {%- for block in section.blocks -%}
      {%- if block.type == 'top_line' -%}
        {%- include 'header-topline' -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}
    {{ res-build }}
  </div>
</div>
