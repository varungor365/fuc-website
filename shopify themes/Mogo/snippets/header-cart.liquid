<div>
	<a href="/cart" class="tt-header__btn tt-header__btn-cart">
		<i class="icon-shop24"></i>
		<span id="tt-cart-count"{% if cart.item_count < 1 %} class="ttg-hidden"{% endif %}>{{ cart.item_count }}</span>
	</a>
	<div class="tt-header__cart">
		<div class="tt-header__cart-content">
			<ul class="colorize-bd">
				{% if cart.item_count > 0 %}
					{% for cart-item in cart.items %}
						{% if forloop.index > 3 %}
							{% break %}
						{% endif %}
						{% include "header-cart-item" %}
					{% endfor %}
				{% endif %}

				<li class="prdbut__product tt-header__cart-example">
					<div>
						<a href="#">
							<img src="#" class="colorize-theme2-bd colorize-theme-bd-h" alt="image">
						</a>
					</div>
					<div>
						<p>
							<a href="#" class="colorize-head-c colorize-theme-c-h"></a>
						</p>
						<span class="tt-header__cart-price">
							<span class="tt-header__cart-price-count"></span>
							<span>x</span>
							<span class="tt-header__cart-price-val tt-price"></span>
						</span>
						<div class="tt-counter" data-min="0" data-max="99">
							<form action="#">
								<input type="text" class="form-control prdbut__cart-count">
							</form>
							<div class="tt-counter__control">
								<span class="icon-up-circle" data-direction="next"></span>
								<span class="icon-down-circle" data-direction="prev"></span>
							</div>
						</div>
					</div>
					<div>
						<a href="#" class="tt-header__cart-edit"><i class="icon-pencil-circled"></i></a>
						<a href="#" class="tt-header__cart-delete prdbut__cart-del" title="{{ 'cart.general.remove' | t }}"><i class="icon-trash"></i></a>
					</div>
				</li>

				<li class="tt-header__cart-more{% if cart.items.size <= 3 %} ttg-hidden{% endif %}"><a href="/cart">{{ 'cart.general.popup_all' | t: count: cart.item_count }}</a></li>

				<li class="tt-header__cart-empty{% if cart.item_count > 0 %} ttg-hidden{% endif %}">{{ 'cart.general.empty' | t }}</li>
			</ul>
			<div class="tt-header__cart-footer{% if cart.item_count == 0 %} ttg-hidden{% endif %}">
				<span class="tt-header__cart-subtotal colorize-head-c">{{ 'cart.general.popup_subtotal' | t }}
					<span class="colorize-theme-c">{{ cart.total_price | money }}</span>
				</span>
				<div class="row">
					<div class="col-lg-6">
						<a href="/cart" class="tt-header__cart-viewcart btn"><i class="icon-shop24"></i> {{ 'cart.general.popup_view' | t }}</a>
					</div>
					<div class="col-lg-6">
						<a href="/checkout" class="tt-header__cart-checkout btn colorize-btn2"><i class="icon-check"></i> {{ 'cart.general.checkout' | t }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>