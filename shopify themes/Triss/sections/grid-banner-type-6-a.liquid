<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-6-mission" class="grid-banner-type-6-mission">  
  <div class="grid-uniform">        
    {% if section.blocks.size > 0 %}      
    {% for block in section.blocks %} 
    <div class="section-two grid_row-flex">
      <div class="grid__item wow fadeInLeft wide--one-half post-large--one-half large--one-half medium--grid__item small-grid__item grid_column_container"> 
        <div class="grid_column-inner" style="background:{{ section.settings.left_bg }}">
          <div class="block-content block-content--{{ block.id }}">              
            {% if block.settings.title != blank %}                        
            <h3 style="color:{{ section.settings.title_color }}">{{ block.settings.title }}</h3>        
            {% endif %}   
            {% if block.settings.sub_title != blank %}                         
            <h4 style="color:{{ section.settings.sub_title_color }}">{{ block.settings.sub_title }}</h4>        
            {% endif %} 
            {% if block.settings.desc != blank %}                         
            <p style="color:{{ section.settings.desc_color }}">{{ block.settings.desc }}</p>        
            {% endif %} 
            {% if block.settings.llink != blank %}<a href="{{ block.settings.llink }}" style="" class="btn">{{ block.settings.button }}<div class="overlay"></div></a>{% endif%}
          </div>  
        </div>
      </div>
      <div  class="grid__item wow fadeInRight wide--one-half post-large--one-half large--one-half medium--grid__item small-grid__item grid_column_container">  
        <div class="grid_column-inner" style="background:{{ section.settings.right_bg }}">
          <div  class="grid__item">
          <div  class="grid__item wide--one-half post-large--one-half large--one-half medium--grid__item small-grid__item row-1"> 
            <div class="img-content flip-hover"> 
              <div class="icon-wrapper" style="background-image:url({{ block.settings.r1image | img_url: 'large' }})">
                

              </div>
              <div class="icon-content" style=" background: {{ section.settings.content_bg_color }}; background: -webkit-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: -o-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%);">
                <div class="icon-content-center">
                {% if block.settings.r1title != blank %}                        
                <h5 style="color:{{ section.settings.right_title_color }}">{{ block.settings.r1title }}</h5>        
                {% endif %}   
                {% if block.settings.r1sub_title != blank %}                         
                <h6 style="color:{{ section.settings.right_subtitle_color }}">{{ block.settings.r1sub_title }}</h6>        
                {% endif %} 
                {% if block.settings.r1desc != blank %}                         
                <p style="color:{{ section.settings.right_time_color }}">{{ block.settings.r1desc }}</p>        
                {% endif %} 
                </div>
              </div>
            </div>
            <div class="img-content flip-hover" style="margin-bottom:10%;"> 
              <div class="icon-wrapper" style="background-image:url({{ block.settings.r2image | img_url: 'large' }})">
                

              </div>
              <div class="icon-content" style=" background: {{ section.settings.content_bg_color }}; background: -webkit-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: -o-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%);margin-bottom:0;">
                <div class="icon-content-center">
                {% if block.settings.r2title != blank %}                        
                <h5 style="color:{{ section.settings.right_title_color }}">{{ block.settings.r2title }}</h5>        
                {% endif %}   
                {% if block.settings.r2sub_title != blank %}                         
                <h6 style="color:{{ section.settings.right_subtitle_color }}">{{ block.settings.r2sub_title }}</h6>        
                {% endif %} 
                {% if block.settings.r2desc != blank %}                         
                <p style="color:{{ section.settings.right_time_color }}">{{ block.settings.r2desc }}</p>        
                {% endif %} 

              </div>
              </div>
            </div>
          </div>
          <div  class="grid__item wide--one-half post-large--one-half large--one-half medium--grid__item small-grid__item row-2"> 

            <div class="img-content flip-hover"> 
              <div class="icon-wrapper" style="background-image:url({{ block.settings.r3image | img_url: 'large' }})">
                

              </div>
              <div class="icon-content" style=" background: {{ section.settings.content_bg_color }}; background: -webkit-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: -o-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%);">
                <div class="icon-content-center">
                {% if block.settings.r3title != blank %}                        
                <h5 style="color:{{ section.settings.right_title_color }}">{{ block.settings.r3title }}</h5>        
                {% endif %}   
                {% if block.settings.r3sub_title != blank %}                         
                <h6 style="color:{{ section.settings.right_subtitle_color }}">{{ block.settings.r3sub_title }}</h6>        
                {% endif %} 
                {% if block.settings.r3desc != blank %}                         
                <p style="color:{{ section.settings.right_time_color }}">{{ block.settings.r3desc }}</p>        
                {% endif %} 
                </div>
              </div>
            </div>
           

            <div class="img-content flip-hover" style="margin-bottom:10%;"> 
              <div class="icon-wrapper" style="background-image:url({{ block.settings.r4image | img_url: 'large' }})">
                

              </div>
              <div class="icon-content" style=" background: {{ section.settings.content_bg_color }}; background: -webkit-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: -o-linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%); background: linear-gradient(45deg,  {{ section.settings.content_bg_color_2 }} 0%, {{ section.settings.content_bg_color }} 100%);">
                <div class="icon-content-center">
                {% if block.settings.r4title != blank %}                        
                <h5 style="color:{{ section.settings.right_title_color }}">{{ block.settings.r4title }}</h5>        
                {% endif %}   
                {% if block.settings.r4sub_title != blank %}                         
                <h6 style="color:{{ section.settings.right_subtitle_color }}">{{ block.settings.r4sub_title }}</h6>        
                {% endif %} 
                {% if block.settings.r4desc != blank %}                         
                <p style="color:{{ section.settings.right_time_color }}">{{ block.settings.r4desc }}</p>        
                {% endif %} 
                </div>
              </div>
            </div>
            </div>
          </div>
        </div>

      </div>
    </div>      
    {% endfor %}
    {% endif %}

    {% for block in section.blocks %} 
    <style>

      .grid-banner-type-6-mission .block-content--{{ block.id }} .btn { background: {{ block.settings.button_bg }} ;color: {{ block.settings.button_text }};}
      .grid-banner-type-6-mission .block-content--{{ block.id }} .btn:hover { background:{{ block.settings.button_hover_bg }};color: {{ block.settings.button_hover_text }};border-color: {{ block.settings.button_hover_bg }};}
      .grid-banner-type-6-mission .block-content--{{ block.id }} .btn:hover:after, .grid-banner-type-6-mission .block-content--{{ block.id }} .btn:hover:before,.grid-banner-type-6-mission .block-content--{{ block.id }} .btn:active:after, .grid-banner-type-6-mission .block-content--{{ block.id }} .btn:active:before { border-color: {{ block.settings.button_bg }}; }

     

    </style>
    {% endfor %}

    
    

  </div>
</div>
