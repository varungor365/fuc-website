              <div class="ch-info" {% if section.settings.overlay3 %} style=" background:{{ section.settings.overlay_3 | color_modify: 'alpha', 0.7 }};"{% endif %}>
                <div class="ch-info-content">

                  {% if section.settings.titleshadow_1 != blank %}
                  <h6 style="text-transform:uppercase;color:{{ section.settings.shadowtext_color }}">{{ section.settings.titleshadow_1 }}</h6>
                  {% endif %}

                  {% if section.settings.title_1_overlay != blank %}
