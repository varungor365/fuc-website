<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-10" class="grid-banner-type-10">   
  <div class="wrapper">
    <div class="grid-uniform featuredItems" style="float:left;width:100%;{% if section.settings.image_bg != blank %} background-image:url('{{ section.settings.image_bg | img_url: 'master' }}');background-repeat:no-repeat;background-position:left top; {% endif %} background-color:{{ section.settings.bg_color }};padding:6em 0;"> 
      {% if section.settings.heading != blank or section.settings.sub_heading  %}
      <div class="border-title text-center wow bounce">
        {% if section.settings.sub_heading != blank %} <h3 style="color:{{ section.settings.sub_heading_clr }}">{{ section.settings.sub_heading }}</h3> {% endif %}

        {% if section.settings.heading != blank %}  <h4 class="" style="color:{{ section.settings.heading_clr }}">{{ section.settings.heading }}</h4> {% endif %}
      </div>
      {% endif %}
      <div class="container">
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center animated wow animated fadeInUp animated">
          <div class="ovrly31 overlay_1">
            {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
            {% if section.settings.image_1 != blank %}
            <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.title_1 }}" />
            <div class="ovrly"></div>
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif%}           
            {% if section.settings.link_1 != blank %}  </a>

            {% endif%}
            <div class="ch-info" {% if section.settings.overlay1 %} style="background: {{ section.settings.overlay_1 | color_modify: 'alpha', 0.9 }};"{% endif %}>
              {% if section.settings.icon_img_1 != blank %}
              <img src="{{ section.settings.icon_img_1 | img_url: 'master' }}" alt="{{ section.settings.title_1 }}" />
              {% endif %}
            
             <div class="ch-info-content">

                  {% if section.settings.titleshadow_3 != blank %}
                  <h6 style="text-transform:uppercase;color:{{ section.settings.shadowtext_color_3 }}">{{ section.settings.titleshadow_3 }}</h6>
                  {% endif %}

                  {% if section.settings.title_3_overlay != blank %}
                  <h3 style="color:{{ section.settings.title_color_3 }}">{{ section.settings.title_3_overlay }}</h3>
                  {% endif %}
                  {% if section.settings.text_3 != blank %}
                  <h4 style="color:{{ section.settings.text_color_3 }}">{{ section.settings.text_3_overlay }}</h4>
                  {% endif %}
                </div>
              </div>
          </div>
          <div class="featured-content">   
            {% if section.settings.title_top_1 != blank %}
            <h6 style="color:{{ section.settings.title_top_1_clr }};">{{ section.settings.title_top_1 }}</h6>
            {% endif %}
            {% if section.settings.title_1 != blank %}
            <h4 style=""> <a href="{{ section.settings.link_1 }}">{{ section.settings.title_1 }}</a></h4>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <p style="color:{{ section.settings.text_1_clr }};">{{ section.settings.text_1}}</p>    
            {% endif %}  
                  
          </div>
        </div>   
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center animated wow animated fadeInUp animated">

          <div class="ovrly31 overlay_2 animated fadeInUp">
            {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
            {% if section.settings.image_2 != blank %}
            <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.title_2 }}" />
            <div class="ovrly"></div>
            {% else %}

            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif%}           
            {% if section.settings.link_2 != blank %}  </a>

            {% endif%}
            <div class="ch-info" {% if section.settings.overlay2 %} style="background: {{ section.settings.overlay_2 | color_modify: 'alpha', 0.7 }}; "{% endif %}>
              {% if section.settings.icon_img_2 != blank %}
              <img src="{{ section.settings.icon_img_2 | img_url: 'master' }}" alt="{{ section.settings.title_2 }}" />
              {% endif %}
            
            <div class="ch-info-content">

                  {% if section.settings.titleshadow_2 != blank %}
                  <h6 style="text-transform:uppercase;color:{{ section.settings.shadowtext_color_2 }}">{{ section.settings.titleshadow_2 }}</h6>
                  {% endif %}

                  {% if section.settings.title_2_overlay != blank %}
                  <h3 style="color:{{ section.settings.title_color_2 }}">{{ section.settings.title_2_overlay }}</h3>
                  {% endif %}
                  {% if section.settings.text_2 != blank %}
                  <h4 style="color:{{ section.settings.text_color_2 }}">{{ section.settings.text_2_overlay }}</h4>
                  {% endif %}
                </div>
              </div>
          </div>
          <div class="featured-content">     
            {% if section.settings.title_top_2 != blank %}
            <h6 style="color:{{ section.settings.title_top_2_clr }};">{{ section.settings.title_top_2 }}</h6>
            {% endif %}
            {% if section.settings.title_2 != blank %}
