            {% endif %}
            {% if section.settings.text_2 != blank %}
            <p style="color:{{ section.settings.text_2_clr }};">{{ section.settings.text_2}}</p>    
            {% endif %}  
                  
          </div> 
        </div>      
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center animated wow animated fadeInUp animated">
          <div class="middle-top animated fadeInUp">  
            <div class="ovrly31 overlay_3">
              {% if section.settings.link_3 != blank %}<a class="banner_half_img" href="{{ section.settings.link_3 }}">{% endif%}
              {% if section.settings.image_3 != blank %}
