{% capture permalinkURL %}{{ shop.url }}{{ product.url }}{% endcapture %}

<div class="social-sharing" data-permalink="{{ permalinkURL }}">

  <p>{{ settings.caption_social_sharing }}</p>

  <div class="social-sharing-inner">
    {% if settings.share_facebook %}
    <a target="_blank" href="//www.facebook.com/sharer.php?u={{ permalinkURL }}" class="share-facebook">
      <i class="fa fa-facebook-square"></i>
    </a>
    {% endif %}

    {% if settings.share_twitter %}
    <a target="_blank" href="//twitter.com/share?url={{ permalinkURL }}&amp;text={{ shareTitle }}" class="share">
      <i class="fa fa-twitter"></i>
    </a>
    {% endif %}

    {% if settings.share_pinterest %}
    <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media=http:{{ product.featured_image | product_img_url: '1024x1024' }}&amp;description={{ shareTitle | url_param_escape }}" class="share-pinterest">
      <i class="fa fa-pinterest-square"></i>
    </a>
    {% endif %}

    {% if settings.share_google %}
    <a target="_blank" href="//plus.google.com/share?url={{ permalinkURL }}" class="share-google">
      <i class="fa fa-google-plus-square"></i>
    </a>
    {% endif %}

    {% if settings.share_email %}
    <a href="mailto:{{shop.email}}?body={{product.title}} ({{shop.url}}{{product.url}})" class="mailto">
      <i class="fa fa-envelope-square"></i>
    </a>
    {% endif %}
  </div>

</div>