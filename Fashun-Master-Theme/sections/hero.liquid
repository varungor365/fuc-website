{% stylesheet %}
  .hero {
    position: relative;
    height: {{ section.settings.hero_height }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  }

  .hero-media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: white;
    max-width: 800px;
    padding: 40px;
  }

  .hero-title {
    font-size: clamp(2rem, 8vw, 4.5rem);
    font-weight: 800;
    font-family: 'Montserrat', sans-serif;
    margin-bottom: 20px;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 3vw, 1.5rem);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 40px;
    font-family: 'Inter', sans-serif;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button-primary {
    background: #007AFF;
    color: white;
    padding: 16px 40px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-family: 'Inter', sans-serif;
  }

  .button-primary:hover {
    background: #0051D5;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 122, 255, 0.3);
  }

  .button-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 16px 40px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    cursor: pointer;
    font-family: 'Inter', sans-serif;
  }

  .button-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .hero {
      height: 500px;
    }

    .hero-content {
      padding: 20px;
    }

    .hero-buttons {
      flex-direction: column;
    }
  }
{% endstylesheet %}

<div class="hero">
  {% if section.settings.hero_image %}
    <img 
      src="{{ section.settings.hero_image | image_url: width: 1920 }}" 
      alt="Hero"
      class="hero-media"
      loading="lazy"
    >
  {% elsif section.settings.hero_video %}
    <video class="hero-media" autoplay muted loop playsinline>
      <source src="{{ section.settings.hero_video.sources.0.url }}" type="video/mp4">
    </video>
  {% endif %}
  
  <div class="hero-overlay"></div>
  
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
    <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
    
    <div class="hero-buttons">
      {% if section.settings.button_1_text %}
        <a href="{{ section.settings.button_1_link }}" class="button-primary">
          {{ section.settings.button_1_text }}
        </a>
      {% endif %}
      
      {% if section.settings.button_2_text %}
        <a href="{{ section.settings.button_2_link }}" class="button-secondary">
          {{ section.settings.button_2_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "video_url",
      "id": "hero_video",
      "label": "Background Video",
      "accept": ["mp4", "webm"]
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Premium Streetwear"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "Curated collection of urban fashion"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero Height (px)",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 600
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.4
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
